@{
    ViewData["Title"] = "DB Backup / Restore";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#16a34a">
<link rel="manifest" href="/manifest.json">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-icon" href="/icons/icon-192.png">

<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 8px;
        --radius: 12px;
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0 0 100px 0; /* Ponechán padding pro obsah, aby nebyl úplně dole */
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    header {
        position: sticky;
        top: 0;
        z-index: 5;
        background: #fff;
        border-bottom: 1px solid var(--border);
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px var(--pad);
    }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .center-form-container {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2rem 2.2rem;
        margin: 40px auto 0 auto;
        max-width: 720px;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
    }

        .center-form-container h2 {
            margin-bottom: 1.8rem;
            text-align: center;
            font-size: 1.6rem;
            color: var(--brand-dark);
        }

    .styled-form {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr;
        gap: 18px;
        align-items: start;
    }

    .full {
        grid-column: 1 / -1;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 0.5rem;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 0.4rem;
            color: #333;
        }

    /* === VLASTNÍ VZHLED PRO INPUT[TYPE=FILE] === */
    .custom-file-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-top: 8px;
    }

    .input-file-hidden {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        overflow: hidden;
        position: absolute;
        z-index: -1;
    }

    .custom-file-label {
        background: var(--brand);
        color: #fff;
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .custom-file-label:hover {
            background: var(--brand-dark);
        }

    .custom-file-name {
        font-style: italic;
        color: #555;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 300px;
    }

    .btn-primary {
        background: var(--brand);
        color: #fff;
        padding: 0.7rem 1.6rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

        .btn-primary:hover {
            background: var(--brand-dark);
        }

        .btn-primary:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

    .btn {
        padding: 0.7rem 1.6rem;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        font-size: 1.1rem;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .field-validation {
        color: #b91c1c;
        font-size: 0.95rem;
        margin-top: 6px;
    }

    .info-box {
        background: #e0f2fe;
        border: 1px solid #0284c7;
        color: #075985;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 0.95rem;
    }

    /* === PLOVOUCÍ TLAČÍTKO (FAB) === */
    .fab-group {
        position: fixed;
        left: 12px;
        bottom: 12px;
        display: none; /* <-- OPRAVA: Výchozí stav je skrytý (pro desktop) */
        flex-direction: column;
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* === RESPONZIVNÍ PRAVIDLA === */
    @@media (max-width: 768px) {
        .center-form-container {
            padding: 1.5rem 1rem;
            margin-top: 20px;
        }

            .center-form-container h2 {
                font-size: 1.4rem;
                margin-bottom: 1.5rem;
            }
        /* Pravidla pro všechny formuláře v .styled-form na mobilu */
        .styled-form .form-group {
            display: block;
            margin-bottom: 1.25rem;
        }

            .styled-form .form-group label {
                display: block;
                margin-bottom: 6px;
                width: 100%;
                text-align: left;
            }

            .styled-form .form-group .form-control,
            .styled-form .form-group input[type="text"],
            .styled-form .form-group input[type="email"],
            .styled-form .form-group input[type="password"],
            .styled-form .form-group input[type="number"],
            .styled-form .form-group input[type="search"],
            .styled-form .form-group select,
            .styled-form .form-group textarea {
                width: 100%;
                display: block;
                box-sizing: border-box;
            }
        /* Úprava pro název souboru na mobilu */
        .custom-file-name {
            max-width: 150px;
        }
        /* OPRAVA: Zobrazíme FAB tlačítko POUZE na mobilu */
        .fab-group {
            display: flex;
        }
    }
</style>

<header>
    <div class="container" style="display:flex;align-items:center;gap:12px">
        <div class="page-header" style="display:flex;align-items:center;gap:12px">
            <a href="@Url.Action("Index", "Photos")" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:18px;color:var(--brand);">Správa dat</h1>
                <div style="font-size:13px;color:#666;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="center-form-container">
        <h2>Správa databáze a importu</h2>

        <div class="info-box">
            ℹ️ <strong>Tip:</strong> Záloha obsahuje databázi a všechny nahrané fotografie zabalené do ZIP archivu.
            Pravidelně si stahujte zálohy pro ochranu vašich dat.
        </div>

        <div class="styled-form">
            <div class="form-group full">
                <label>📥 Stáhnout zálohu databáze a fotografií:</label>
                <button id="downloadBtn" class="btn-primary" style="width:100%;">Stáhnout zálohu (ZIP)</button>
            </div>

            <div class="full" style="border-top:2px solid var(--border);margin:20px 0;"></div>

            <div class="form-group full">
                <label>📤 Nahrát a obnovit databázi ze zálohy (ZIP):</label>

                <div class="custom-file-wrapper">
                    <input type="file" id="restoreFile" class="input-file-hidden" accept=".zip" />
                    <label for="restoreFile" class="custom-file-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color:white;"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                        Vybrat soubor...
                    </label>
                    <span id="restoreFile-name" class="custom-file-name">Soubor nevybrán</span>
                </div>

                <div class="field-validation" style="color:#075985;margin-top:8px;">
                    ⚠️ Pozor: Obnovení přepíše aktuální databázi a fotografie!
                </div>
            </div>

            <div class="form-group full" style="display:flex;gap:12px;justify-content:flex-end;margin-top:10px;">
                <button id="restoreBtn" class="btn-primary">Obnovit ze zálohy</button>
            </div>

            <div class="full" style="border-top:2px solid var(--border);margin:40px 0 20px 0;"></div>

            <div class="form-group full">
                <label>📊 Importovat data z Excel souboru (.xlsx, .xls):</label>

                <div class="custom-file-wrapper">
                    <input type="file" id="excelFile" class="input-file-hidden" accept=".xlsx,.xls" />
                    <label for="excelFile" class="custom-file-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color:white;"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                        Vybrat soubor...
                    </label>
                    <span id="excelFile-name" class="custom-file-name">Soubor nevybrán</span>
                </div>

                <div class="field-validation" style="color:#075985;margin-top:8px;">
                    💡 Excel musí obsahovat sloupce: Position, ExternalId, OriginalName, Material, Form, Filler, Color, Description, MonthlyQuantity, Mfi, Notes, Supplier
                </div>
            </div>

            <div class="form-group full" style="display:flex;gap:12px;justify-content:flex-end;margin-top:10px;">
                <button id="importBtn" class="btn-primary">Importovat z Excelu</button>
            </div>
        </div>

        <div id="statusMessage" style="display:none;"></div>
    </div>
</main>

<div class="fab-group">
    <a href="@Url.Action("Index", "Photos")" class="fab" title="Zpět na katalog" aria-label="Zpět na katalog">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color:white;">
            <path d="M19 12H5"></path>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
    </a>
</div>

<script>
    // Stažení zálohy
    async function downloadBackup() {
        const btn = document.getElementById('downloadBtn');
        btn.disabled = true;
        btn.textContent = '⏳ Vytváření zálohy...';

        try {
            const resp = await fetch('/api/admin/db/backup', { method: 'GET', credentials: 'include' });
            if (!resp.ok) {
                const t = await resp.text();
                alert('Chyba při vytváření zálohy: ' + t);
                return;
            }
            const blob = await resp.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'photoapp-backup.zip';
            document.body.appendChild(a);
            a.click();
            a.remove();
            window.URL.revokeObjectURL(url);
        } catch (err) {
            alert('Chyba: ' + err.message);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Stáhnout zálohu (ZIP)';
        }
    }

    // Obnovení ze zálohy
    async function uploadRestore(fileInput) {
        const file = fileInput?.files?.[0];
        if (!file) return alert('Vyberte soubor.');

        if (file.size > 200 * 1024 * 1024) return alert('Soubor je příliš velký (max 200 MB).');

        if (!confirm('Opravdu chcete obnovit databázi? Aktuální data budou přepsána!')) return;

        const btn = document.getElementById('restoreBtn');
        btn.disabled = true;
        btn.textContent = '⏳ Nahrávání...';

        const form = new FormData();
        form.append('backupZip', file);

        try {
            const resp = await fetch('/api/admin/db/restore', {
                method: 'POST',
                body: form,
                credentials: 'include'
            });

            if (!resp.ok) {
                const txt = await resp.text();
                alert('Restore failed: ' + txt);
                return;
            }

            const contentType = resp.headers.get('content-type') || '';
            if (contentType.includes('application/json')) {
                try {
                    const json = await resp.json();
                    if (json?.redirect) {
                        window.location.href = json.redirect;
                        return;
                    }
                } catch { /* ignore */ }
            }

            alert('✅ Restore byl úspěšný!');
            window.location.href = '/Photos';
        } catch (err) {
            alert('Chyba: ' + err.message);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Obnovit ze zálohy';
        }
    }

    // Import z Excelu
    async function uploadImport(fileInput) {
        const file = fileInput?.files?.[0];
        if (!file) return alert('Vyberte Excel soubor.');

        if (!confirm('Opravdu chcete importovat data z Excel souboru?')) return;

        const btn = document.getElementById('importBtn');
        btn.disabled = true;
        btn.textContent = '⏳ Importování...';

        const form = new FormData();
        form.append('file', file);

        try {
            // Použití @@Url.Action pro správnou cestu k PhotosControlleru
            const resp = await fetch('@Url.Action("Import", "Photos")', {
                method: 'POST',
                body: form,
                credentials: 'include',
                headers: {
                    // Potřebné pro anti-forgery token, pokud ho controller vyžaduje
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            });

            if (!resp.ok) {
                const txt = await resp.text();
                alert('Import se nezdařil: ' + txt);
                return;
            }

            alert('✅ Import byl úspěšný!');
            window.location.href = '/Photos';
        } catch (err) {
            alert('Chyba: ' + err.message);
        } finally {
            btn.disabled = false;
            btn.textContent = 'Importovat z Excelu';
        }
    }

    // Event listenery
    document.addEventListener('DOMContentLoaded', () => {
        // Anti-forgery token pro formulář, aby byl dostupný pro JS
        if (!document.querySelector('input[name="__RequestVerificationToken"]')) {
            const form = document.createElement('form');
            form.innerHTML = '@Html.AntiForgeryToken()';
            document.body.appendChild(form).style.display = 'none';
        }

        const downloadBtn = document.getElementById('downloadBtn');
        if (downloadBtn) downloadBtn.addEventListener('click', downloadBackup);

        const restoreBtn = document.getElementById('restoreBtn');
        const restoreFile = document.getElementById('restoreFile');
        if (restoreBtn && restoreFile) {
            restoreBtn.addEventListener('click', () => uploadRestore(restoreFile));
        }

        const importBtn = document.getElementById('importBtn');
        const excelFile = document.getElementById('excelFile');
        if (importBtn && excelFile) {
            importBtn.addEventListener('click', () => uploadImport(excelFile));
        }

        // === KÓD PRO ZOBRAZENÍ NÁZVU SOUBORU ===
        function setupFileInput(inputId, spanId) {
            const input = document.getElementById(inputId);
            const span = document.getElementById(spanId);
            if (input && span) {
                input.addEventListener('change', () => {
                    if (input.files && input.files.length > 0) {
                        span.textContent = input.files[0].name;
                        span.style.fontStyle = 'normal';
                        span.style.color = '#333';
                    } else {
                        span.textContent = 'Soubor nevybrán';
                        span.style.fontStyle = 'italic';
                        span.style.color = '#555';
                    }
                });
            }
        }

        // Aplikujeme funkci na oba file inputy
        setupFileInput('restoreFile', 'restoreFile-name');
        setupFileInput('excelFile', 'excelFile-name');
    });
</script>