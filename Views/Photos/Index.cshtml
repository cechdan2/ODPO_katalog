<script>
    // GLOBÁLNÍ FUNKCE PRO PŘÍMÉ OTEVŘENÍ OVERLAYE
    window.showDirectOverlay = function(src) {
        document.getElementById('overlay-image').src = src;
        document.getElementById('image-overlay').classList.add('active');
    };

    document.addEventListener("DOMContentLoaded", function() {
        setTimeout(() => $('.multi-select').select2({ allowClear: true, closeOnSelect: false }), 100);

        // --- UI & FILTERS ---
        const toggleBtn = document.getElementById('sidebar-toggle-btn');
        const body = document.body;
        if (localStorage.getItem('filtersVisible') === 'true') body.classList.add('filters-visible');
        if (toggleBtn) toggleBtn.addEventListener('click', () => {
            const isNowVisible = body.classList.toggle('filters-visible');
            localStorage.setItem('filtersVisible', isNowVisible ? 'true' : 'false');
        });

        const resetBtn = document.getElementById('resetFiltersBtn');
        const filterForm = document.getElementById('desktopFilterForm');
        if (resetBtn && filterForm) {
            resetBtn.addEventListener('click', (e) => {
                e.preventDefault();
                filterForm.querySelector('input[name="search"]').value = '';
                $(filterForm).find('.multi-select').val(null).trigger('change');
                filterForm.querySelector('input[name="minMfi"]').value = '';
                filterForm.querySelector('input[name="maxMfi"]').value = '';
                filterForm.querySelectorAll('.col-toggle').forEach(cb => cb.checked = true);
                filterForm.submit();
            });
        }

        const openFilterFab = document.getElementById('openFilterFab');
        if (openFilterFab && toggleBtn) openFilterFab.addEventListener('click', () => toggleBtn.click());

        const checkboxesCol = document.querySelectorAll(".col-toggle");
        function toggleField(colName, isVisible) {
            document.querySelectorAll(`.sample-card [data-col='${colName}']`).forEach(field => field.style.display = isVisible ? "flex" : "none");
        }
        checkboxesCol.forEach(cb => {
            const colName = cb.dataset.col;
            toggleField(colName, cb.checked);
            cb.addEventListener("change", function() { toggleField(colName, this.checked); });
        });

        // --- BULK ACTIONS & SELECTION ---
        const selectAllBtn = document.getElementById('selectAllBtn');
        const bulkBar = document.getElementById('bulkActionsBar');
        const selectedCountSpan = document.getElementById('selectedCount');
        const checkboxes = document.querySelectorAll('.card-select-checkbox');
        let selectedIds = [];

        function updateBulkUI() {
            selectedIds = Array.from(checkboxes).filter(cb => cb.checked).map(cb => cb.value);
            selectedCountSpan.textContent = selectedIds.length;
            if (selectedIds.length > 0) {
                bulkBar.classList.add('visible');
                document.body.classList.add('bulk-active');
            } else {
                bulkBar.classList.remove('visible');
                document.body.classList.remove('bulk-active');
            }
            checkboxes.forEach(cb => {
                const card = cb.closest('.sample-card');
                if (cb.checked) card.classList.add('selected'); else card.classList.remove('selected');
            });
        }

        if (selectAllBtn) {
            selectAllBtn.addEventListener('click', () => {
                const visibleCheckboxes = document.querySelectorAll('.sample-card:not([style*="display: none"]) .card-select-checkbox');
                const allChecked = Array.from(visibleCheckboxes).every(cb => cb.checked);
                visibleCheckboxes.forEach(cb => cb.checked = !allChecked);
                updateBulkUI();
            });
        }

        checkboxes.forEach(cb => cb.addEventListener('change', updateBulkUI));
        document.getElementById('cancelSelectionBtn').addEventListener('click', () => { checkboxes.forEach(cb => cb.checked = false); updateBulkUI(); });

        // --- BULK DELETE ---
        document.getElementById('bulkDeleteBtn').addEventListener('click', function() {
            if (confirm(`Delete ${selectedIds.length} samples?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteMultiple", "Photos")';
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) {
                    const hiddenToken = document.createElement('input');
                    hiddenToken.type = 'hidden'; hiddenToken.name = '__RequestVerificationToken'; hiddenToken.value = tokenInput.value;
                    form.appendChild(hiddenToken);
                }
                selectedIds.forEach(id => {
                    const input = document.createElement('input');
                    input.type = 'hidden'; input.name = 'ids'; input.value = id;
                    form.appendChild(input);
                });
                document.body.appendChild(form);
                form.submit();
            }
        });

        // --- PDF MODAL & EXPORT LOGIC ---
        const pdfModal = document.getElementById('pdfModal');
        const openBtn = document.getElementById('open-pdf-export-btn'); // Main export button
        const openBtnMobile = document.getElementById('openPdfModalBtnMobile');
        const closePdfBtn = document.getElementById('pdfModalClose');
        const bulkPdfBtn = document.getElementById('bulkPdfBtn'); // Bulk Summary
        const bulkDownloadAllBtn = document.getElementById('bulkDownloadAllBtn'); // Bulk Bundle
        const generatePdfBtn = document.getElementById('generatePdfBtn');
        const pdfModalTitle = document.getElementById('pdfModalTitle');

        // State to track if we are doing a bundle download or a single PDF
        let pdfExportMode = 'standard'; // 'standard' or 'bundle'

        function openPdfModal(mode, title) {
            if (pdfModal) {
                pdfExportMode = mode;
                pdfModalTitle.innerText = title;

                // Set defaults
                const defaults = ["Id", "Material", "Color", "Form", "Mfi", "Filler", "MonthlyQuantity", "Notes"];
                document.querySelectorAll('#pdf-column-list input[type="checkbox"]').forEach(cb => {
                    cb.checked = defaults.includes(cb.value);
                });

                // Update button text
                generatePdfBtn.innerText = mode === 'bundle' ? "Start Bundle Download" : "Generate PDF";
                pdfModal.style.display = 'flex';
            }
        }

        function closePdfModal() { if (pdfModal) pdfModal.style.display = 'none'; }

        // Event Listeners for Opening Modal
        if (openBtn) openBtn.addEventListener('click', () => openPdfModal('standard', "Export to PDF (Filtered)"));
        if (openBtnMobile) openBtnMobile.addEventListener('click', () => openPdfModal('standard', "Export to PDF"));
        if (closePdfBtn) closePdfBtn.addEventListener('click', closePdfModal);

        // 1. Bulk Summary PDF
        if (bulkPdfBtn) bulkPdfBtn.addEventListener('click', () => openPdfModal('standard', `Export Summary (${selectedIds.length} items)`));

        // 2. Bulk Bundle Download (CHANGED: Now opens modal)
        if (bulkDownloadAllBtn) bulkDownloadAllBtn.addEventListener('click', () => openPdfModal('bundle', `Download Bundle (${selectedIds.length} files)`));

        // Generate Action
        if (generatePdfBtn) {
            generatePdfBtn.addEventListener('click', function() {
                const checkedBoxes = document.querySelectorAll('#pdf-column-list input[type="checkbox"]:checked');

                // Get selected columns
                let columnsParams = "";
                checkedBoxes.forEach(cb => columnsParams += `&columnsToInclude=${cb.value}`);

                if (pdfExportMode === 'standard') {
                    // --- STANDARD / SUMMARY EXPORT ---
                    let params = new URLSearchParams();
                    if (selectedIds.length > 0) {
                        selectedIds.forEach(id => params.append('ids', id));
                    } else {
                        const fd = new FormData(document.getElementById('desktopFilterForm'));
                        params = new URLSearchParams(fd);
                    }
                    // Append columns
                    const finalUrl = `@Url.Action("ExportPdf", "Photos")?${params.toString()}${columnsParams}`;
                    window.open(finalUrl, '_blank');

                } else if (pdfExportMode === 'bundle') {
                    // --- BUNDLE DOWNLOAD LOOP ---
                    if (selectedIds.length === 0) return;
                    if (!confirm(`Start downloading ${selectedIds.length + 1} files? Please allow pop-ups.`)) return;

                    // 1. Download Summary First
                    let summaryParams = new URLSearchParams();
                    selectedIds.forEach(id => summaryParams.append('ids', id));
                    const summaryUrl = `@Url.Action("ExportPdf", "Photos")?${summaryParams.toString()}${columnsParams}`;
                    window.open(summaryUrl, '_blank');

                    // 2. Loop for individual files
                    selectedIds.forEach((id, index) => {
                        setTimeout(() => {
                            // We pass the SAME column selection to the single export
                            const singleUrl = `@Url.Action("ExportSinglePdf", "Photos")?id=${id}${columnsParams}`;
                            const link = document.createElement('a');
                            link.href = singleUrl;
                            link.download = '';
                            document.body.appendChild(link);
                            link.click();
                            document.body.removeChild(link);
                        }, (index * 800) + 1200);
                    });
                }
                closePdfModal();
            });
        }

        // --- ZOOM LOGIC ---
        const overlay = document.getElementById('image-overlay');
        const overlayImg = document.getElementById('overlay-image');
        const closeOverlayBtn = document.querySelector('.close-overlay-btn');
        let hoverTimer = null;

        function closeOverlay() { overlay.classList.remove('active'); }

        document.querySelectorAll('.thumb').forEach(thumb => {
            thumb.addEventListener('mouseenter', () => {
                hoverTimer = setTimeout(() => {
                    overlayImg.src = thumb.src;
                    overlay.classList.add('active');
                }, 500);
            });
            thumb.addEventListener('mouseleave', () => {
                clearTimeout(hoverTimer);
                closeOverlay();
            });
        });

        if(closeOverlayBtn) closeOverlayBtn.addEventListener('click', closeOverlay);
        overlay.addEventListener('click', closeOverlay);
        document.addEventListener('keydown', (e) => { if (e.key === "Escape") closeOverlay(); });
    });
</script>