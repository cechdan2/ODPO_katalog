<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Initialize Select2
        setTimeout(() => {
            $('.multi-select').select2({ allowClear: true, closeOnSelect: false });
        }, 100);

        // --- UPRAVENÁ LOGIKA PRO SKLÁPĚNÍ FILTRU ---
        const toggleBtn = document.getElementById('sidebar-toggle-btn');
        const body = document.body;

        if (localStorage.getItem('filtersVisible') === 'true') {
            body.classList.add('filters-visible');
        }

        if (toggleBtn) {
            toggleBtn.addEventListener('click', () => {
                const isNowVisible = body.classList.toggle('filters-visible');
                localStorage.setItem('filtersVisible', isNowVisible ? 'true' : 'false');
            });
        }

        // --- RESET LOGIKA (VČETNĚ MFI) ---
        const resetBtn = document.getElementById('resetFiltersBtn');
        const filterForm = document.getElementById('desktopFilterForm');

        if (resetBtn && filterForm) {
            resetBtn.addEventListener('click', (e) => {
                e.preventDefault();

                // Text
                const searchInput = filterForm.querySelector('input[name="search"]');
                if (searchInput) searchInput.value = '';

                // Selects
                $(filterForm).find('.multi-select').val(null).trigger('change');

                // MFI
                const minMfi = filterForm.querySelector('input[name="minMfi"]');
                if(minMfi) minMfi.value = '';
                const maxMfi = filterForm.querySelector('input[name="maxMfi"]');
                if(maxMfi) maxMfi.value = '';

                // Checkboxes
                filterForm.querySelectorAll('.col-toggle').forEach(cb => cb.checked = true);

                filterForm.submit();
            });
        }

        // --- FAB FILTER BUTTON Logic (Mobile) ---
        const openFilterFab = document.getElementById('openFilterFab');
        if (openFilterFab && toggleBtn) {
            openFilterFab.addEventListener('click', () => {
                 toggleBtn.click();
            });
        }

        // Toggle field visibility
        const checkboxes = document.querySelectorAll(".col-toggle");
        function toggleField(colName, isVisible) {
            document.querySelectorAll(`.sample-card [data-col='${colName}']`).forEach(field => {
                field.style.display = isVisible ? "flex" : "none";
            });
        }
        checkboxes.forEach(cb => {
            const colName = cb.dataset.col;
            toggleField(colName, cb.checked);
            cb.addEventListener("change", function() { toggleField(colName, this.checked); });
        });

        // --- IMAGE PREVIEW ---
        const overlay = document.getElementById('image-overlay');
        const overlayImage = document.getElementById('overlay-image');
        let hoverTimer = null;

        function closeOverlay() {
            overlay.classList.remove('active');
        }

        document.querySelectorAll('.thumb').forEach(thumb => {
            thumb.addEventListener('mouseenter', () => {
                hoverTimer = setTimeout(() => {
                    overlayImage.src = thumb.src;
                    overlay.classList.add('active');
                }, 800);
            });
            thumb.addEventListener('mouseleave', () => {
                clearTimeout(hoverTimer);
                closeOverlay();
            });
        });

        document.querySelectorAll('.gallery-thumb-link').forEach(link => {
            link.addEventListener('click', function(event) {
                event.preventDefault();
                const imageSrc = this.querySelector('img').src;
                overlayImage.src = imageSrc;
                overlay.classList.add('active');
            });
        });

        overlay.addEventListener('click', closeOverlay);
        document.addEventListener('keydown', (e) => {
            if (e.key === "Escape") closeOverlay();
        });


        // --- PDF MODAL LOGIC (DESKTOP & MOBILE FAB) ---
        const pdfModal = document.getElementById('pdfModal');
        const openBtn = document.getElementById('open-pdf-export-btn');
        const openBtnMobile = document.getElementById('openPdfModalBtnMobile');
        const closePdfBtn = document.getElementById('pdfModalClose');
        const generatePdfBtn = document.getElementById('generatePdfBtn');

    function openPdfModal() {
            if (pdfModal) {
                // 1. Zobrazit okno
                pdfModal.style.display = 'flex';

                // 2. Seznam hodnot, které mají být VŽDY zaškrtnuté při otevření
                // (Důležité: Text musí přesně odpovídat tomu, co je v HTML v atributu value="...")
                const defaults = [
                    "Id",
                    "Material",
                    "Color",
                    "Form",
                    "Mfi",
                    "Filler",
                    "MonthlyQuantity",
                    "Notes",

                ];

                // 3. Najít všechny checkboxy v seznamu
                const checkboxes = document.querySelectorAll('#pdf-column-list input[type="checkbox"]');

                // 4. Projít je a nastavit stav
                checkboxes.forEach(cb => {
                    // Pokud je hodnota checkboxu v seznamu 'defaults', zaškrtneme ho (true)
                    // Pokud tam není, odškrtneme ho (false)
                    if (defaults.includes(cb.value)) {
                        cb.checked = true;
                    } else {
                        cb.checked = false;
                    }
                });
            }
        }

        function closePdfModal() {
            if (pdfModal) pdfModal.style.display = 'none';
        }

        if (openBtn) openBtn.addEventListener('click', openPdfModal);
        if (openBtnMobile) openBtnMobile.addEventListener('click', openPdfModal);
        if (closePdfBtn) closePdfBtn.addEventListener('click', closePdfModal);
        if (pdfModal) {
            pdfModal.addEventListener('click', (e) => {
                if (e.target === pdfModal) closePdfModal();
            });
        }

        if (generatePdfBtn) {
            generatePdfBtn.addEventListener('click', function() {
                const checkedBoxes = document.querySelectorAll('#pdf-column-list input[type="checkbox"]:checked');

                // Create params from FORM data (so filters are included)
                const mainForm = document.getElementById('desktopFilterForm');
                const formData = new FormData(mainForm);
                const params = new URLSearchParams(formData);

                // Add selected columns
                checkedBoxes.forEach(cb => {
                    params.append('columnsToInclude', cb.value);
                });

                const exportUrl = `@Url.Action("ExportPdf", "Photos")?${params.toString()}`;
                window.open(exportUrl, '_blank');
                closePdfModal();
            });
        }

    });

    if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js')
                .then(reg => console.log('Service Worker registered.'))
                .catch(err => console.log('Service Worker registration failed: ', err));
        });
    }
</script>