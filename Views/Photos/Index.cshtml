@using System.Linq
@model PhotoApp.ViewModels.PhotosIndexViewModel
@{
    ViewData["Title"] = "ODPO s.r.o. – Plastic Samples Catalog";
    string Safe(string s) => string.IsNullOrWhiteSpace(s) ? "—" : s;
    Func<PhotoApp.Models.PhotoRecord, string> ImageSrc = item =>
        !string.IsNullOrWhiteSpace(item.ImagePath) ? Url.Content(item.ImagePath) :
        !string.IsNullOrWhiteSpace(item.PhotoPath) ? Url.Content(item.PhotoPath) : null;

    var filtersToRender = new[] {
        new { Name = "supplier", Placeholder = "Supplier", AllValues = Model.Suppliers, SelectedValues = Model.Supplier },
        new { Name = "material", Placeholder = "Material", AllValues = Model.Materials, SelectedValues = Model.Material },
        new { Name = "color", Placeholder = "Color", AllValues = Model.Colors, SelectedValues = Model.Color },
        new { Name = "position", Placeholder = "Position", AllValues = Model.Positions, SelectedValues = Model.Position },
        new { Name = "form", Placeholder = "Form", AllValues = Model.Forms, SelectedValues = Model.Form },
        new { Name = "filler", Placeholder = "Filler", AllValues = Model.Fillers, SelectedValues = Model.Filler },
        new { Name = "monthlyQuantity", Placeholder = "Monthly Quantity", AllValues = Model.MonthlyQuantities, SelectedValues = Model.MonthlyQuantity }
    };
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#16a34a">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>

<style>
    /* === BASIC STYLES === */
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 16px;
        --radius: 16px;
        --sidebar-width: 320px;
        --header-height: 70px;
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu;
        color: var(--text);
        background: var(--bg);
        padding-left: 0;
        transition: padding-left 0.3s ease-in-out;
    }

    /* === HEADER === */
    header {
        position: fixed;
        top: 0;
        z-index: 100;
        background: #fff;
        border-bottom: 1px solid var(--border);
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        left: 0;
        width: 100%;
        height: var(--header-height);
        transition: left 0.3s ease-in-out, width 0.3s ease-in-out;
        display: flex;
        align-items: center;
    }

    .header-container {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: inherit;
    }

        .brand img {
            height: 40px;
        }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .header-right-actions {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-pill {
        font-size: 13px;
        color: #133a13;
        background: #fbfff9;
        border: 1px solid #e6f1e6;
        padding: 6px 10px;
        border-radius: 999px;
        white-space: nowrap;
    }

    /* === BUTTONS === */
    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: inherit;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        cursor: pointer;
        white-space: nowrap;
    }

        .action-btn.primary {
            background: var(--brand);
            color: #fff;
            border-color: var(--brand-dark);
        }

        .action-btn.destructive {
            background: #ef4444;
            color: #fff;
            border-color: #b91c1c;
        }

    .logout-form {
        margin: 0;
        padding: 0;
        display: flex;
    }

    /* === SIDEBAR === */
    #sidebar-toggle-btn {
        position: absolute;
        top: 50%;
        right: -32px;
        width: 32px;
        height: 60px;
        transform: translateY(-50%);
        z-index: 101;
        background: var(--brand);
        color: var(--white);
        border: 1px solid var(--brand-dark);
        border-left: none;
        border-radius: 0 12px 12px 0;
        padding: 0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

        #sidebar-toggle-btn:hover {
            background: var(--brand-dark);
        }

        #sidebar-toggle-btn .arrow-icon {
            transition: transform 0.3s ease-in-out;
            stroke: var(--white);
            transform: rotate(0deg);
        }

    .page-layout {
        max-width: 1600px;
        margin: 0 auto;
        padding: 20px;
        padding-top: 100px;
    }

    .filter-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: var(--sidebar-width);
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: var(--gap);
        max-height: 100vh;
        overflow: visible;
        z-index: 90;
        background: var(--bg);
        padding: var(--pad);
        padding-top: calc(var(--header-height) + var(--pad));
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
    }

    .filter-sidebar-content {
        overflow-y: auto;
        height: 100%;
        padding-right: 5px;
    }

    body.filters-visible {
        padding-left: var(--sidebar-width);
    }

        body.filters-visible header {
            left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
        }

        body.filters-visible .filter-sidebar {
            transform: translateX(0);
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        body.filters-visible #sidebar-toggle-btn .arrow-icon {
            transform: rotate(180deg);
        }

    /* === FILTERS === */
    .filter-section {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: var(--pad);
    }

    .filter-toggle-placeholder {
        width: 20px;
        flex-shrink: 0;
    }

    .search-input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        flex-grow: 1;
        background-color: var(--white);
        border: 1px solid var(--border);
        border-radius: 7px;
        min-height: 38px;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .search-input-wrapper:focus-within {
            outline: none;
            border-color: var(--brand);
            box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2);
        }

        .search-input-wrapper .search-icon {
            position: absolute;
            left: 10px;
            width: 20px;
            height: 20px;
            color: #9ca3af;
            pointer-events: none;
        }

        .search-input-wrapper input[type="search"] {
            flex-grow: 1;
            width: 100%;
            height: 100%;
            padding-left: 38px;
            border: none;
            background-color: transparent;
            outline: none;
            font-size: 14px;
            font-family: inherit;
        }

    .filter-section h2 {
        margin: 0 0 12px 0;
        font-size: 16px;
        color: var(--brand-dark);
        border-bottom: 1px solid var(--border);
        padding-bottom: 8px;
    }

    .filter-form {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .filter-controls {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px;
        margin-top: 8px;
    }

    .filter-row {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .filter-row .select2-container {
            flex-grow: 1;
        }

    .filter-range-inputs {
        display: flex;
        gap: 8px;
        flex-grow: 1;
    }

        .filter-range-inputs input {
            width: 50%;
            padding: 6px;
            border: 1px solid var(--border);
            border-radius: 6px;
            font-size: 13px;
        }

    .filter-toggle {
        -webkit-appearance: none;
        appearance: none;
        position: relative;
        width: 20px;
        height: 20px;
        border: 2px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
        flex-shrink: 0;
        transition: background-color 0.2s, border-color 0.2s;
    }

        .filter-toggle:checked {
            background-color: var(--brand);
            border-color: var(--brand-dark);
        }

            .filter-toggle:checked::after {
                content: '✔';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 14px;
                color: white;
            }

    /* === CARDS === */
    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
        gap: var(--gap);
    }

    .sample-card {
        background: var(--white);
        border-radius: var(--radius);
        border: 1px solid var(--border);
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        padding: 0;
        overflow: hidden;
        position: relative;
    }

    /* Small Checkbox */
    .card-select-checkbox {
        position: absolute;
        top: 10px;
        left: 10px;
        width: 18px;
        height: 18px;
        z-index: 10;
        cursor: pointer;
        accent-color: var(--brand);
    }

    .sample-card.selected {
        border: 2px solid var(--brand);
        background-color: #f0fdf4;
    }

    /* Card Content */
    .sample-card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px var(--pad);
        border-bottom: 1px solid var(--border);
        background: #fcfcfc;
    }

    .id-badge {
        font-size: 0.85rem;
        font-weight: 600;
        color: #777;
        background: #eee;
        padding: 2px 8px;
        border-radius: 6px;
        margin-left: 24px;
    }

    .card-title {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--brand-dark);
        text-align: center;
        flex-grow: 1;
        padding: 0 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .delete-icon {
        color: #ccc;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
    }

        .delete-icon:hover {
            color: #ef4444;
        }

    .sample-card-body {
        display: flex;
        gap: var(--pad);
        padding: var(--pad);
    }

    .image-column {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: center;
        flex-shrink: 0;
        width: 160px;
    }

        /* HLAVNÍ fotka */
        .image-column > .thumb {
            width: 160px;
            height: 160px;
            flex-shrink: 0;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid var(--border);
        }

    .info-grid {
        flex-grow: 1;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px 12px;
        font-size: 15px;
        align-content: start;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

        .info-item strong {
            font-weight: 600;
            color: #555;
            font-size: 11px;
            opacity: 0.8;
            margin-bottom: 1px;
        }

        .info-item span {
            font-size: 14px;
            font-weight: 500;
        }

    .sample-card-bottom {
        padding: 0 var(--pad) var(--pad) var(--pad);
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 16px;
    }

    .notes-content {
        flex-grow: 1;
        font-size: 14px;
        color: #444;
    }

    .notes-label {
        font-weight: 600;
        font-size: 11px;
        color: #555;
        opacity: 0.8;
        display: block;
        margin-bottom: 2px;
    }

    .edit-btn-wrapper {
        flex-shrink: 0;
        display: flex;
        align-items: flex-end;
    }

    .footer {
        text-align: center;
        color: #666;
        font-size: 12px;
        padding: 20px 0;
    }

    /* Gallery */
    .additional-photos-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        justify-content: center;
    }

        /* VEDLEJŠÍ fotky (malé) */
        .additional-photos-gallery .thumb {
            width: 76px;
            height: 76px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid var(--border);
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

            .additional-photos-gallery .thumb:hover {
                transform: scale(1.1);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

    /* === IMAGE OVERLAY (ZOOM) === */
    #image-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 2000;
        backdrop-filter: blur(5px);
        /* pointer-events: none na overlay zajistí, že myš "vidí" skrz něj na původní fotku. */
        pointer-events: none;
    }

        #image-overlay.active {
            display: flex;
        }

        #image-overlay img {
            max-width: 90vw;
            max-height: 90vh;
            object-fit: contain;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            border-radius: 4px;
        }
    /* Křížek je nyní jen vizuální */
    .close-overlay-btn {
        position: absolute;
        top: 20px;
        right: 30px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        z-index: 2001;
        opacity: 0.5;
    }

    /* === BULK BAR === */
    .bulk-actions-bar {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background: white;
        border-top: 1px solid var(--border);
        padding: 15px 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
        z-index: 1000;
        transform: translateY(100%);
        transition: transform 0.3s ease-in-out;
        flex-wrap: wrap;
    }

        .bulk-actions-bar.visible {
            transform: translateY(0);
        }

    .bulk-info {
        font-weight: 600;
        color: var(--brand-dark);
        margin-right: 10px;
    }
    @@media (max-width: 768px) {
        .bulk-actions-bar

    {
        flex-direction: column;
        gap: 10px;
        padding-bottom: 20px;
    }

    .fab-group {
        bottom: 100px;
        transition: bottom 0.3s;
    }

    body.bulk-active .fab-group {
        bottom: 140px;
    }

    }

    /* === PLUGINS & FAB === */
    .select2-container .select2-selection--multiple {
        border: 1px solid var(--border) !important;
        border-radius: 7px !important;
        min-height: 38px;
        padding: 2px;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: var(--brand) !important;
        border-color: var(--brand-dark) !important;
        color: white !important;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
        color: #fff !important;
    }

    .select2-container--default .select2-search--inline .select2-search__field {
        margin-top: 5px;
    }

    .fab-group {
        position: fixed;
        right: 20px;
        bottom: 20px;
        display: flex;
        flex-direction: column-reverse;
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 300;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
            font-size: 20px;
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* === PDF MODAL === */
    .pdf-modal {
        position: fixed;
        inset: 0;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,0.6);
        z-index: 9998;
        padding: 20px;
    }

    .pdf-modal-content {
        background: var(--white);
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: 0 4px 20px rgba(0,0,0,.2);
        max-width: 500px;
        width: 100%;
        position: relative;
        max-height: 90vh;
        overflow-y: auto;
    }

    .pdf-modal-close {
        position: absolute;
        top: 15px;
        right: 15px;
        background: transparent;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #888;
        line-height: 1;
    }

    #pdf-column-list {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 16px;
        border-top: 1px solid var(--border);
        padding-top: 16px;
    }

        #pdf-column-list label {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            font-size: 0.95rem;
        }
    @@media (max-width: 500px) {
        #pdf-column-list

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<header>
    <div class="header-container">
        <a class="brand" asp-controller="Photos" asp-action="Index">
            <img src="@Url.Content("~/logo.png")" alt="ODPO logo" />
            <h1>Sample Catalog</h1>
        </a>
        <div class="header-right-actions">
            <a href="@Url.Action("Create", "Photos")" class="action-btn primary">+ New Sample</a>
            <a href="@Url.Action("Database", "Admin")" class="action-btn">Data Management</a>
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="user-pill" title="@User?.Identity?.Name">@User?.Identity?.Name</div>
                <form class="logout-form" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="action-btn" title="Log out">Logout</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="action-btn">Login</a>
            }
        </div>
    </div>
</header>

<aside class="filter-sidebar">
    <button id="sidebar-toggle-btn" title="Toggle filters">
        <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
    </button>

    <div class="filter-sidebar-content">
        <div class="filter-section">
            <h2>Filter & Display</h2>
            <form method="get" class="filter-form" id="desktopFilterForm">
                <div class="filter-row">
                    <div class="filter-toggle-placeholder"></div>
                    <div class="search-input-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="search-icon">
                            <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
                        </svg>
                        <input type="search" name="search" placeholder="Search anything…" value="@(Model?.Search ?? "")" />
                    </div>
                </div>
                @foreach (var filter in filtersToRender)
                {
                    <div class="filter-row">
                        <input type="checkbox" class="filter-toggle col-toggle" data-col="@filter.Name.ToLower()" title="Show column" checked />
                        <select name="@filter.Name" class="multi-select" multiple="multiple" data-placeholder="@filter.Placeholder">
                            <option></option>
                            @foreach (var val in filter.AllValues)
                            {
                                <option value="@val" selected="@(filter.SelectedValues.Contains(val))">@val</option>
                            }
                        </select>
                    </div>
                }
                <div class="filter-row" style="align-items: flex-start;">
                    <input type="checkbox" class="filter-toggle col-toggle" data-col="mfi" title="Show column" checked style="margin-top: 6px;" />
                    <div style="flex-grow: 1; display: flex; flex-direction: column; gap: 4px;">
                        <label style="font-size: 12px; color: #666; margin-left: 4px;">MFI Range</label>
                        <div class="filter-range-inputs">
                            <input type="number" name="minMfi" placeholder="Min" step="any" value="@Context.Request.Query["minMfi"]" />
                            <input type="number" name="maxMfi" placeholder="Max" step="any" value="@Context.Request.Query["maxMfi"]" />
                        </div>
                    </div>
                </div>
                <div class="filter-row">
                    <input type="checkbox" class="filter-toggle col-toggle" data-col="notes" title="Show column" checked />
                    <div style="flex-grow: 1; padding: 8px; border: 1px solid transparent; color: #999;">Notes</div>
                </div>
                <div class="filter-controls">
                    <button type="submit" class="action-btn primary">Filter</button>
                    <button type="button" id="resetFiltersBtn" class="action-btn">Clear</button>
                    <button type="button" id="selectAllBtn" class="action-btn" style="grid-column: 1 / -1; background: #e0f2fe; border-color: #7dd3fc; color: #0369a1;">Select All Visible</button>
                    <button type="button" id="open-pdf-export-btn" class="action-btn" style="grid-column: 1 / -1; background: #f0fdf4; border-color: var(--brand);">Exportovat do PDF...</button>
                </div>
            </form>
        </div>
    </div>
</aside>

<div class="page-layout">
    <main class="content-area">
        <div class="card-grid">
            @foreach (var item in Model.Items)
            {
                <div class="sample-card" style="cursor: pointer;"
                     onclick="if(!event.target.classList.contains('card-select-checkbox')) location.href='@Url.Action("Details", new { id = item.Id })'">

                    <input type="checkbox" class="card-select-checkbox" value="@item.Id" onclick="event.stopPropagation()" />

                    <div class="sample-card-top">
                        <span class="id-badge">#@item.Id</span>
                        <h3 class="card-title">@Safe(item.Material)</h3>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="delete-icon" title="Delete sample" onclick="event.stopPropagation(); return confirm('Are you sure you want to delete this sample?');">
