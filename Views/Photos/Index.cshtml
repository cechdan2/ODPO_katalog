                            }
                            @if (!string.IsNullOrWhiteSpace(item.Color))
                            {
                                <div class="info-item" data-col="color"><strong>Color</strong><span>@item.Color</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Position))
                            {
                                <div class="info-item" data-col="position"><strong>Position</strong><span>@item.Position</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Form))
                            {
                                <div class="info-item" data-col="form"><strong>Form</strong><span>@item.Form</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Filler))
                            {
                                <div class="info-item" data-col="filler"><strong>Filler</strong><span>@item.Filler</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.MonthlyQuantity))
                            {
                                <div class="info-item" data-col="monthlyquantity"><strong>Quantity (month)</strong><span>@item.MonthlyQuantity</span></div>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Mfi))
                            {
                                <div class="info-item" data-col="mfi"><strong>MFI/°C/kg</strong><span>@item.Mfi</span></div>
                            }
                        </div>
                    </div>

                    <div class="sample-card-bottom">
                        <div class="info-item notes-content" data-col="notes">
                            <span class="notes-label">Notes</span><span>@Safe(item.Notes)</span>
                        </div>
                        <div class="edit-btn-wrapper">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn primary" style="padding: 6px 16px; font-size: 14px;" onclick="event.stopPropagation()">Edit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="footer">Number of samples: @Model.Items.Count()</div>
    </main>
