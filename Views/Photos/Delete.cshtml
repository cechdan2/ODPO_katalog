@model PhotoApp.Models.PhotoRecord
@{
    ViewData["Title"] = "Smazat vzorek";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#16a34a">
<link rel="manifest" href="/manifest.json">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-icon" href="/icons/icon-192.png">
<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 8px;
        --radius: 12px;
    }

    * {
        box-sizing: border-box
    }

    body {
        margin: 0;
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    header {
        position: sticky;
        top: 0;
        z-index: 5;
        background: #fff;
        border-bottom: 1px solid var(--border);
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px var(--pad);
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px
    }

        .brand img {
            height: 36px;
            width: auto
        }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .card {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: var(--pad);
        margin: 40px auto 0 auto;
        max-width: 500px;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
    }

    .delete-title {
        color: #b91c1c;
        font-size: 1.3rem;
        margin-bottom: 14px;
        text-align: center;
        font-weight: 700;
    }

    dl {
        margin: 0 0 1.5em 0;
    }

    dt {
        font-weight: 500;
        color: #555;
        margin-top: 10px;
    }

    dd {
        margin: 0 0 0 0;
        padding-bottom: 3px;
    }

    .thumb {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid var(--border);
        margin-top: 10px;
        display: block;
    }

    .btn-row {
        display: flex;
        gap: 12px;
        margin-top: 1.6em;
        justify-content: center;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
    }

    .btn-danger {
        background: #ef4444;
        color: #fff;
        border-color: #b91c1c;
    }

    .btn:hover {
        background: #e6f9e9;
    }

    .btn-danger:hover {
        background: #b91c1c;
    }

    .footer {
        text-align: center;
        color: #3b6b3b;
        font-size: 12px;
        padding: 20px 0
    }
</style>
<header>
    <div class="container" style="display:flex;align-items:center;gap:12px">
        <div class="page-header" style="display:flex;align-items:center;gap:12px">
            <a asp-controller="Photos" asp-action="Index" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:18px;color:var(--brand);">Smazat vzorek</h1>
                <div class="muted" style="font-size:13px;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="card">
        <div class="delete-title">Opravdu chcete smazat tento vzorek?</div>
        <dl>
            <dt>Název</dt>
            <dd>@Model.Name</dd>
            <dt>Kód</dt>
            <dd>@Model.Code</dd>
            <dt>Typ</dt>
            <dd>@Model.Type</dd>
            <dt>Dodavatel</dt>
            <dd>@Model.Supplier</dd>
            <dt>Poznámky</dt>
            <dd>@Model.Notes</dd>
            @{
                var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath)
                ? Url.Content(Model.ImagePath)
                : (!string.IsNullOrWhiteSpace(Model.PhotoPath) ? Url.Content(Model.PhotoPath) : null);
            }
            @if (!string.IsNullOrEmpty(imageSrc))
            {
                <dt>Obrázek</dt>
                <dd><img src="@imageSrc" class="thumb" alt="Obrázek vzorku" /></dd>
            }
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()
            <div class="btn-row">
                <button type="submit" class="btn btn-danger">Smazat</button>
                <a href="@Url.Action("Index")" class="btn">Zpět</a>
            </div>
        </form>
    </div>
    <div class="footer">Data se ukládají v databázi. Pro zálohu exportujte data ze serveru.</div>
</main>