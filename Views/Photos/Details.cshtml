</div>

<div id="imageLightbox" class="image-lightbox" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="inner" role="document">
        <button class="close-btn" id="lightboxClose" aria-label="Close (Esc)">✕</button>
        <img id="lightboxImg" src="" alt="Enlarged photo" />
    </div>
</div>

<script>
    (function () {
        const lightbox = document.getElementById('imageLightbox');
        const lightboxImg = document.getElementById('lightboxImg');
        const closeBtn = document.getElementById('lightboxClose');
        const zoomableImages = document.querySelectorAll('.photo-zoom');

        function openLightbox(src, alt) {
            if (!src) return;
            lightboxImg.src = src;
            if (alt) lightboxImg.alt = alt;
            lightbox.classList.add('show');
            lightbox.setAttribute('aria-hidden', 'false');
        }

        function closeLightbox() {
            lightbox.classList.remove('show');
            lightbox.setAttribute('aria-hidden', 'true');
            lightboxImg.src = '';
        }

        zoomableImages.forEach(img => {
            img.addEventListener('click', function () {
                openLightbox(img.getAttribute('data-full') || img.src, img.alt);
            });
        });

        closeBtn.addEventListener('click', closeLightbox);
        lightbox.addEventListener('click', (e) => {
            if (e.target === lightbox) closeLightbox();
        });
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && lightbox.classList.contains('show')) closeLightbox();
        });

        const quickInput = document.getElementById('quickUploadInput');
        const quickPreview = document.getElementById('quickUploadPreview');
        const uploadBtn = document.getElementById('uploadBtn');

        if (quickInput) {
            quickInput.addEventListener('change', function(e) {
                quickPreview.innerHTML = '';
                uploadBtn.disabled = true;
                if (e.target.files.length > 0) {
                    uploadBtn.disabled = false;
                    Array.from(e.target.files).forEach(file => {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = ev => {
                                const img = document.createElement('img');
                                img.src = ev.target.result;
                                quickPreview.appendChild(img);
                            };
                            reader.readAsDataURL(file);
                        }
                    });
                }
            });
        }
    })();
</script>