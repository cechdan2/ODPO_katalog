@using Microsoft.AspNetCore.Html
@model PhotoApp.Models.PhotoRecord

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#16a34a">
<link rel="manifest" href="/manifest.json">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-icon" href="/icons/icon-192.png">
@{
    ViewData["Title"] = "Sample Details";

    var publicUrl = ViewBag.PublicUrl as string ?? Url.Action("DetailsAnonymous", "Home", new { id = Model.Id }, Context?.Request?.Scheme ?? "https");
    var qrApi = !string.IsNullOrWhiteSpace(publicUrl)
        ? "https://api.qrserver.com/v1/create-qr-code/?size=240x240&data=" + System.Uri.EscapeDataString(publicUrl)
        : null;

    var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath) ? Url.Content(Model.ImagePath) : (string.IsNullOrWhiteSpace(Model.PhotoPath) ? null : Url.Content(Model.PhotoPath));

    IHtmlContent Safe(string s) => string.IsNullOrWhiteSpace(s) ? new HtmlString("-") : new HtmlString(Html.Encode(s));
    string SafeDate(DateTime dt) => (dt == DateTime.MinValue) ? "-" : dt.ToLocalTime().ToString("g");

    var additionalPhotos = Model.GetAdditionalPhotosList();
}
<style>
    /* === GLOBAL & MOBILE-FIRST STYLES === */
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --radius: 12px;
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: var(--text);
        overflow-x: hidden;
        padding-bottom: 100px; /* space for FAB */
    }

    .detail-page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 16px;
    }

    .card {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 20px;
        box-shadow: 0 2px 10px rgba(0,0,0,.05);
    }

    .layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .media {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
    }

        .media img.detail-img {
            width: 100%;
            max-width: 280px;
            aspect-ratio: 1;
            object-fit: cover;
            border-radius: 10px;
            border: 1.5px solid var(--border);
            background: #f7fef7;
            cursor: zoom-in;
        }

    .meta {
        text-align: center;
    }

        .meta .title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--brand);
            margin-bottom: 6px;
            word-wrap: break-word;
        }

    .qr {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

        .qr img {
            width: 160px;
            height: 160px;
            border: 1px solid #e3e3e3;
            background: #fff;
            padding: 6px;
        }

    .fields {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .label {
        font-weight: 700;
        color: #333;
        font-size: 0.9rem;
    }

    .value {
        padding: 10px;
        background: #fbfff9;
        border: 1px solid var(--border);
        border-radius: 8px;
        min-height: 34px;
        color: #222;
        white-space: pre-wrap;
        word-break: break-word;
    }

    .full {
        grid-column: 1;
    }

    .muted {
        color: #666;
        font-size: 0.85rem;
        margin-top: 10px;
    }

    .actions {
        margin-top: 14px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .btn {
        padding: 12px 14px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand);
        text-decoration: none;
        font-weight: 500;
        cursor: pointer;
        text-align: center;
        display: block;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .btn-primary {
        border: none;
        background: var(--brand);
        color: white;
    }

        .btn-primary:hover {
            background: #15803d;
        }

        .btn-primary:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

    .additional-photos-section {
        margin-top: 24px;
        padding-top: 20px;
        border-top: 2px solid var(--border);
    }

        .additional-photos-section h3 {
            margin: 0 0 16px 0;
            color: var(--brand);
            font-size: 1.1rem;
        }

    .photo-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 8px;
    }

    .gallery-item {
        position: relative;
        aspect-ratio: 1;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--border);
        background: #f7fef7;
    }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            cursor: zoom-in;
        }

        .gallery-item .delete-btn {
            position: absolute;
            top: 4px;
            right: 4px;
            background: rgba(185, 28, 28, 0.9);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 4px 6px;
            font-size: 0.7rem;
            cursor: pointer;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .gallery-item:hover .delete-btn {
            opacity: 1;
        }

    .upload-form {
        margin-top: 16px;
        padding: 16px;
        background: #f9fef9;
        border: 1px solid var(--border);
        border-radius: 8px;
    }

        .upload-form h4 {
            margin: 0 0 12px 0;
            font-size: 1rem;
            color: var(--brand);
        }

        .upload-form input[type="file"] {
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        .upload-form .preview-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 10px;
        }

            .upload-form .preview-container img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border-radius: 6px;
                border: 1px solid var(--border);
            }

    .image-lightbox {
        position: fixed;
        inset: 0;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,0.85);
        z-index: 99999;
        padding: 20px;
    }

        .image-lightbox.show {
            display: flex;
            animation: fadeIn 150ms ease;
        }

        .image-lightbox img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            border-radius: 8px;
            cursor: zoom-out;
        }

        .image-lightbox .close-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: rgba(255,255,255,0.9);
            border-radius: 6px;
            border: none;
            padding: 8px 12px;
            font-weight: 700;
            cursor: pointer;
            font-size: 1.2rem;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* FAB */
    .fab-group {
        position: fixed;
        right: 12px;
        bottom: 12px;
        display: flex;
        flex-direction: column-reverse;
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.primary {
            background-color: var(--brand);
            color: var(--white);
        }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
        }

        .fab.destructive {
            background: #ef4444;
            color: var(--white);
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    @@media (min-width: 768px) {
        body {
            padding-bottom: 0;
        }

        .layout {
            grid-template-columns: 320px 1fr;
        }

        .fields {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px 20px;
        }

        .full {
            grid-column: 1 / -1;
        }

        .actions {
            flex-direction: row;
            justify-content: flex-end;
        }

        .btn {
            width: auto;
        }

        .photo-gallery {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 12px;
        }

        .fab-group {
            display: none;
        }
    }
</style>

<main class="detail-page">

    <header style="margin-bottom: 20px;">
        <div style="display:flex;align-items:center;gap:12px;flex-wrap:wrap;">
            <a href="@Url.Action("Index", "Photos")" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:40px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:16px;color:var(--brand);">Sample Details</h1>
                <div class="muted" style="font-size:12px;">ODPO s.r.o. – Plastic Samples Catalog</div>
            </div>
        </div>
    </header>

    <div class="card layout" role="region" aria-label="Sample details">
        <aside class="media" aria-label="Image and public link">
            @if (!string.IsNullOrEmpty(imageSrc))
            {
                <img src="@imageSrc" alt="Sample photo: @Model.Name" class="detail-img photo-zoom" data-full="@imageSrc" />
            }
            else
            {
                <div class="detail-img" style="display:flex;align-items:center;justify-content:center;color:#999;" aria-hidden="true">No image</div>
            }

            <div class="meta">
                <div class="title">@(!string.IsNullOrWhiteSpace(Model.Name) ? Model.Name : "-")</div>
                <div class="muted">Updated: @SafeDate(Model.UpdatedAt)</div>
            </div>

            <div class="qr" aria-label="Public link and QR code">
                <div style="font-weight:700;">Public link (QR)</div>
                @if (!string.IsNullOrWhiteSpace(qrApi))
                {
                    <img src="@qrApi" alt="QR code for public detail" />
                    <div><a href="@publicUrl" target="_blank" rel="noopener">Open public detail</a></div>
                }
                else
                {
                    <div class="muted">Public link not available.</div>
                }
            </div>
        </aside>

        <section>
            <h2 style="margin-top:0;margin-bottom:12px;font-size:1.2rem;">Sample information</h2>

            <div class="fields" aria-live="polite">
                <div class="field"><div class="label">Position</div><div class="value">@Safe(Model.Position?.ToString())</div></div>
                <div class="field"><div class="label">ID</div><div class="value">@Safe(Model.ExternalId)</div></div>
                <div class="field full"><div class="label">Supplier</div><div class="value">@Safe(Model.Supplier)</div></div>
                <div class="field full"><div class="label">Name</div><div class="value">@Safe(Model.OriginalName)</div></div>
                <div class="field"><div class="label">Material</div><div class="value">@Safe(Model.Material)</div></div>
                <div class="field"><div class="label">Form</div><div class="value">@Safe(Model.Form)</div></div>
                <div class="field"><div class="label">Filler</div><div class="value">@Safe(Model.Filler)</div></div>
                <div class="field"><div class="label">Color</div><div class="value">@Safe(Model.Color)</div></div>
                <!-- Description removed as requested -->
                <div class="field"><div class="label">Quantity (month)</div><div class="value">@Safe(Model.MonthlyQuantity?.ToString())</div></div>
                <div class="field"><div class="label">MFI</div><div class="value">@Safe(Model.Mfi)</div></div>
                <div class="field full"><div class="label">Notes</div><div class="value">@Safe(Model.Notes)</div></div>
                <div class="field"><div class="label">Created</div><div class="value">@SafeDate(Model.CreatedAt)</div></div>
            </div>

            <div class="additional-photos-section">
                <h3>Additional photos (@additionalPhotos.Count)</h3>

                @if (additionalPhotos.Count > 0)
                {
                    <div class="photo-gallery">
                        @foreach (var photoPath in additionalPhotos)
                        {
                            <div class="gallery-item">
                                <img src="@Url.Content(photoPath)" alt="Additional photo" class="photo-zoom" data-full="@Url.Content(photoPath)" />
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <form asp-action="DeleteAdditionalPhoto" asp-route-id="@Model.Id" asp-route-photoPath="@photoPath" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="delete-btn" onclick="return confirm('Delete this photo?');">Delete</button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                }

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="upload-form">
                        <h4>➕ Add more photos</h4>
                        <form asp-action="UploadAdditionalPhotos" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="uploadForm">
                            @Html.AntiForgeryToken()
                            <input type="file" name="AdditionalPhotoFiles" id="quickUploadInput" accept="image/*" multiple />
                            <div id="quickUploadPreview" class="preview-container"></div>
                            <button type="submit" class="btn-primary" id="uploadBtn" disabled>Upload photos</button>
                        </form>
                    </div>
                }
            </div>

            <div class="actions">
                <a href="@Url.Action("Index", "Photos")" class="btn">Back to catalog</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="@Url.Action("Edit", "Photos", new { id = Model.Id })" class="btn">Edit Sample</a>
                }
            </div>
        </section>
    </div>
</main>

<!-- FAB (mobile only) -->
