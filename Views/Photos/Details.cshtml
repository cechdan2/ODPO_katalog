@using Microsoft.AspNetCore.Html
@model PhotoApp.Models.PhotoRecord

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#16a34a">
<link rel="manifest" href="/manifest.json">
<!-- Android / Chrome -->
<meta name="mobile-web-app-capable" content="yes">
<!-- iOS -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-icon" href="/icons/icon-192.png">
@{
    ViewData["Title"] = "Detail vzorku";

    var publicUrl = ViewBag.PublicUrl as string ?? Url.Action("DetailsAnonymous", "Home", new { id = Model.Id }, Context?.Request?.Scheme ?? "https");
    var qrApi = !string.IsNullOrWhiteSpace(publicUrl)
        ? "https://api.qrserver.com/v1/create-qr-code/?size=240x240&data=" + System.Uri.EscapeDataString(publicUrl)
        : null;

    var imageSrc = !string.IsNullOrWhiteSpace(Model.ImagePath) ? Url.Content(Model.ImagePath) : (string.IsNullOrWhiteSpace(Model.PhotoPath) ? null : Url.Content(Model.PhotoPath));

    IHtmlContent Safe(string s) => string.IsNullOrWhiteSpace(s) ? new HtmlString("-") : new HtmlString(Html.Encode(s));
    string SafeDate(DateTime dt) => (dt == DateTime.MinValue) ? "-" : dt.ToLocalTime().ToString("g");

    // Získat seznam dodatečných fotek
    var additionalPhotos = Model.GetAdditionalPhotosList();
}
<style>
    * {
        box-sizing: border-box;
    }

    :root {
        --brand: #16a34a;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --radius: 12px;
        --bar-height: 108px;
    }

    body {
        margin: 0;
        padding: 0 0 108px 0;
        overflow-x: hidden;
    }

    .detail-page {
        max-width: 1100px;
        margin: 0 auto;
        padding: 16px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: var(--text);
        width: 100%;
    }

    .card {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 20px;
        box-shadow: 0 2px 10px rgba(0,0,0,.05);
        width: 100%;
    }

    .layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
        width: 100%;
    }

    .media {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        width: 100%;
    }

        .media img.detail-img {
            width: 100%;
            max-width: 280px;
            height: auto;
            aspect-ratio: 1;
            object-fit: cover;
            border-radius: 10px;
            border: 1.5px solid var(--border);
            background: #f7fef7;
            cursor: zoom-in;
            transition: transform .12s ease;
        }

            .media img.detail-img:hover {
                transform: scale(1.02);
            }

    .meta {
        width: 100%;
        text-align: center;
    }

        .meta .title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--brand);
            margin-bottom: 6px;
            word-wrap: break-word;
        }

    .qr {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        width: 100%;
    }

        .qr img {
            width: 160px;
            height: 160px;
            object-fit: contain;
            border: 1px solid #e3e3e3;
            background: #fff;
            padding: 6px;
        }

    .fields {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
        width: 100%;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
        width: 100%;
    }

    .label {
        font-weight: 700;
        color: #333;
        font-size: 0.9rem;
    }

    .value {
        padding: 10px;
        background: #fbfff9;
        border: 1px solid var(--border);
        border-radius: 8px;
        min-height: 34px;
        color: #222;
        white-space: pre-wrap;
        word-break: break-word;
        width: 100%;
        overflow-wrap: break-word;
    }

    .full {
        grid-column: 1;
    }

    .muted {
        color: #666;
        font-size: 0.85rem;
        margin-top: 10px;
    }

    .actions {
        margin-top: 14px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 100%;
    }

    .btn {
        padding: 12px 14px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand);
        text-decoration: none;
        font-weight: 500;
        cursor: pointer;
        text-align: center;
        display: block;
        width: 100%;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .btn-primary {
        padding: 12px 14px;
        border-radius: 8px;
        border: none;
        background: var(--brand);
        color: white;
        font-weight: 500;
        cursor: pointer;
        width: 100%;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background: #15803d;
        }

        .btn-primary:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

    /* *** GALERIE DODATEČNÝCH FOTEK *** */
    .additional-photos-section {
        margin-top: 24px;
        padding-top: 20px;
        border-top: 2px solid var(--border);
        width: 100%;
    }

        .additional-photos-section h3 {
            margin: 0 0 16px 0;
            color: var(--brand);
            font-size: 1.1rem;
        }

    .photo-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 8px;
        width: 100%;
    }

    .gallery-item {
        position: relative;
        aspect-ratio: 1;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--border);
        background: #f7fef7;
    }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            cursor: zoom-in;
            transition: transform 0.2s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        .gallery-item .delete-btn {
            position: absolute;
            top: 4px;
            right: 4px;
            background: rgba(185, 28, 28, 0.9);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 4px 6px;
            font-size: 0.7rem;
            cursor: pointer;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .gallery-item:hover .delete-btn {
            opacity: 1;
        }

        .gallery-item .delete-btn:hover {
            background: rgba(153, 27, 27, 1);
        }

    /* *** FORMULÁŘ PRO NAHRÁNÍ FOTEK *** */
    .upload-form {
        margin-top: 16px;
        padding: 16px;
        background: #f9fef9;
        border: 1px solid var(--border);
        border-radius: 8px;
        width: 100%;
    }

        .upload-form h4 {
            margin: 0 0 12px 0;
            font-size: 1rem;
            color: var(--brand);
        }

        .upload-form input[type="file"] {
            margin-bottom: 10px;
            font-size: 0.9rem;
            width: 100%;
            max-width: 100%;
        }

        .upload-form .preview-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin: 10px 0;
            width: 100%;
        }

            .upload-form .preview-container img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border-radius: 6px;
                border: 1px solid var(--border);
            }

    /* Lightbox */
    .image-lightbox {
        position: fixed;
        inset: 0;
        display: none;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,0.85);
        z-index: 99999;
        padding: 20px;
    }

        .image-lightbox.show {
            display: flex;
            animation: fadeIn 150ms ease;
        }

        .image-lightbox .inner {
            max-width: calc(100% - 40px);
            max-height: calc(100% - 40px);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .image-lightbox img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.6);
            cursor: zoom-out;
        }

        .image-lightbox .close-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: rgba(255,255,255,0.9);
            border-radius: 6px;
            border: none;
            padding: 8px 12px;
            font-weight: 700;
            cursor: pointer;
            font-size: 1.2rem;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Bottom action bar - MENŠÍ VERZE (2/5 z původních 180px = 108px) */
    .bottom-bar {
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        height: 108px;
        background: linear-gradient(180deg, var(--brand), #166534);
        border-top: 1px solid rgba(0,0,0,0.06);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1500;
        padding: 10px;
        gap: 12px;
        box-shadow: 0 -6px 20px rgba(0,0,0,0.12);
    }

        .bottom-bar .actions-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            width: 100%;
            max-width: 600px;
            padding: 6px;
        }

        .bottom-bar .action-btn {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 5px;
            padding: 8px;
            border-radius: 12px;
            text-decoration: none;
            color: #fff;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.08);
            min-height: 60px;
        }

            .bottom-bar .action-btn img {
                width: 29px;
                height: 29px;
                display: block;
                filter: drop-shadow(0 2px 2px rgba(0,0,0,0.25));
            }

            .bottom-bar .action-btn .label {
                font-size: 8.5px;
                font-weight: 600;
                color: #fff;
                text-align: center;
            }

    /* Desktop layout */
    @@media (min-width: 768px) {
        .layout {
            grid-template-columns: 320px 1fr;
        }

        .fields {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px 20px;
        }

        .full {
            grid-column: 1 / -1;
        }

        .actions {
            flex-direction: row;
            justify-content: flex-end;
        }

        .btn {
            width: auto;
        }

        .photo-gallery {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 12px;
        }
    }

    /* Tablet */
    @@media (min-width: 600px) and (max-width: 767px) {
        .photo-gallery {
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        }
    }

    /* Mobile responsive */
    @@media (max-width: 420px) {
        .bottom-bar {
            height: 96px;
        }

            .bottom-bar .actions-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 8px;
            }

            .bottom-bar .action-btn {
                min-height: 51px;
            }

                .bottom-bar .action-btn img {
                    width: 25px;
                    height: 25px;
                }

                .bottom-bar .action-btn .label {
                    font-size: 7.5px;
                }
    }
</style>

<main class="detail-page">

    <header style="margin-bottom: 20px;">
        <div style="display:flex;align-items:center;gap:12px;flex-wrap:wrap;">
            <a asp-controller="Photos" asp-action="Index" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:40px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:16px;color:var(--brand);">Detail vzorku</h1>
                <div class="muted" style="font-size:12px;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </header>

    <div class="card layout" role="region" aria-label="Detail vzorku">
        <aside class="media" aria-label="Obrázek a veřejný odkaz">
            @if (!string.IsNullOrEmpty(imageSrc))
            {
                <img src="@imageSrc" alt="Fotografie vzorku: @Model.Name" class="detail-img photo-zoom" data-full="@imageSrc" />
            }
            else
            {
                <div class="detail-img" style="display:flex;align-items:center;justify-content:center;color:#999;" aria-hidden="true">Žádný obrázek</div>
            }

            <div class="meta">
                <div class="title">@(!string.IsNullOrWhiteSpace(Model.Name) ? Model.Name : "-")</div>
                <div class="muted">Upraveno: @SafeDate(Model.UpdatedAt)</div>
            </div>

            <div class="qr" aria-label="Veřejný odkaz a QR kód">
                <div style="font-weight:700;">Veřejný odkaz (QR)</div>
                @if (!string.IsNullOrWhiteSpace(qrApi))
                {
                    <img src="@qrApi" alt="QR kód veřejného detailu" />
                    <div><a href="@publicUrl" target="_blank" rel="noopener">Otevřít veřejný detail</a></div>
                }
                else
                {
                    <div class="muted">Veřejný odkaz není dostupný.</div>
                }
            </div>
        </aside>

        <section>
            <h2 style="margin-top:0;margin-bottom:12px;font-size:1.2rem;">Informace o vzorku</h2>

            <div class="fields" aria-live="polite">
                <div class="field"><div class="label">Pozice</div><div class="value">@Safe(Model.Position?.ToString())</div></div>
                <div class="field"><div class="label">ID</div><div class="value">@Safe(Model.ExternalId)</div></div>
                <div class="field full"><div class="label">Dodavatel</div><div class="value">@Safe(Model.Supplier)</div></div>
                <div class="field full"><div class="label">Původní název</div><div class="value">@Safe(Model.OriginalName)</div></div>
                <div class="field"><div class="label">Materiál</div><div class="value">@Safe(Model.Material)</div></div>
                <div class="field"><div class="label">Forma</div><div class="value">@Safe(Model.Form)</div></div>
                <div class="field"><div class="label">Plnivo</div><div class="value">@Safe(Model.Filler)</div></div>
                <div class="field"><div class="label">Barva</div><div class="value">@Safe(Model.Color)</div></div>
                <div class="field full"><div class="label">Popis</div><div class="value">@Safe(Model.Description)</div></div>
                <div class="field"><div class="label">Množství (měsíc)</div><div class="value">@Safe(Model.MonthlyQuantity?.ToString())</div></div>
                <div class="field"><div class="label">MFI</div><div class="value">@Safe(Model.Mfi)</div></div>
                <div class="field full"><div class="label">Poznámky</div><div class="value">@Safe(Model.Notes)</div></div>
                <div class="field"><div class="label">Vytvořeno</div><div class="value">@SafeDate(Model.CreatedAt)</div></div>
            </div>

            @* *** GALERIE DODATEČNÝCH FOTEK *** *@
            <div class="additional-photos-section">
                <h3>Dodatečné fotografie (@additionalPhotos.Count)</h3>

                @if (additionalPhotos.Count > 0)
                {
                    <div class="photo-gallery">
                        @foreach (var photoPath in additionalPhotos)
                        {
                            <div class="gallery-item">
                                <img src="@Url.Content(photoPath)" alt="Dodatečná fotografie" class="photo-zoom" data-full="@Url.Content(photoPath)" />
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <form asp-action="DeleteAdditionalPhoto" asp-route-id="@Model.Id" asp-route-photoPath="@photoPath" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="delete-btn" onclick="return confirm('Opravdu smazat tuto fotku?');">Smazat</button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                }

                @* *** FORMULÁŘ PRO NAHRÁNÍ NOVÝCH FOTEK *** *@
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="upload-form">
                        <h4>➕ Přidat další fotografie</h4>
                        <form asp-action="UploadAdditionalPhotos" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="uploadForm">
                            @Html.AntiForgeryToken()
                            <input type="file" name="AdditionalPhotoFiles" id="quickUploadInput" accept="image/*" multiple />
                            <div id="quickUploadPreview" class="preview-container"></div>
                            <button type="submit" class="btn-primary" id="uploadBtn" disabled>Nahrát fotky</button>
                        </form>
                    </div>
                }
            </div>

            <div class="actions">
                <a asp-controller="Photos" asp-action="Index" class="btn">Zpět na katalog</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Photos" asp-action="Edit" asp-route-id="@Model.Id" class="btn">Upravit vzorek</a>
                }
            </div>
        </section>
    </div>
</main>

