</div>

<div id="imageLightbox" class="image-lightbox" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="inner" role="document">
        <button class="close-btn" id="lightboxClose" aria-label="Close">✕</button>
        <img id="lightboxImg" src="" alt="Enlarged photo" />
    </div>
</div>

<div id="pdfModal" class="pdf-modal" role="dialog" aria-modal="true" aria-labelledby="pdfModalTitle" style="display: none;">
    <div class="pdf-modal-content">
        <button id="pdfModalClose" class="pdf-modal-close" aria-label="Close">✕</button>
        <h2 id="pdfModalTitle">Export to PDF</h2>
        <p>Select columns to include in export:</p>

        <div id="pdf-column-list">
            <label><input type="checkbox" value="Photo" checked> <span>Main Photo</span></label>
            <label><input type="checkbox" value="QrCode" checked> <span>Public Link (QR)</span></label>
            <label><input type="checkbox" value="Id" checked> <span>ID</span></label>
            <label><input type="checkbox" value="Position" checked> <span>Position</span></label>
            <label><input type="checkbox" value="Supplier" checked> <span>Supplier</span></label>
            <label><input type="checkbox" value="OriginalName" checked> <span>Name</span></label>
            <label><input type="checkbox" value="Material" checked> <span>Material</span></label>
            <label><input type="checkbox" value="Form" checked> <span>Form</span></label>
            <label><input type="checkbox" value="Filler" checked> <span>Filler</span></label>
            <label><input type="checkbox" value="Color" checked> <span>Color</span></label>
            <label><input type="checkbox" value="MonthlyQuantity" checked> <span>Quantity (month)</span></label>
            <label><input type="checkbox" value="Mfi" checked> <span>MFI</span></label>
            <label><input type="checkbox" value="Notes" checked> <span>Notes</span></label>
            <label><input type="checkbox" value="CreatedAt" checked> <span>Created</span></label>
            <label><input type="checkbox" value="UpdatedAt" checked> <span>Updated</span></label>
        </div>

        <button id="generatePdfBtn" class="btn-primary" style="width: 100%; margin-top: 20px;">Generate PDF</button>
    </div>
</div>


<script>
    (function () {
        const lightbox = document.getElementById('imageLightbox');
        const lightboxImg = document.getElementById('lightboxImg');
        const closeBtn = document.getElementById('lightboxClose');
        const zoomableImages = document.querySelectorAll('.photo-zoom');

        // --- PDF MODAL ELEMENTS ---
        const pdfModal = document.getElementById('pdfModal');
        const openPdfBtn = document.getElementById('openPdfModalBtn'); // Button ID for desktop/tablet logic if exists
        // Note: In FAB above, the ID is openPdfModalBtnMobile, let's target that specific one or general class
        const openPdfBtnFab = document.querySelector('#openPdfModalBtnMobile');

        const closePdfBtn = document.getElementById('pdfModalClose');
        const generatePdfBtn = document.getElementById('generatePdfBtn');

        // Lightbox Logic
        function openLightbox(src, alt) {
            if (!src) return;
            lightboxImg.src = src;
            if (alt) lightboxImg.alt = alt;
            lightbox.classList.add('show');
            lightbox.setAttribute('aria-hidden', 'false');
        }

        function closeLightbox() {
            lightbox.classList.remove('show');
            lightbox.setAttribute('aria-hidden', 'true');
            lightboxImg.src = '';
        }

        zoomableImages.forEach(img => {
            img.addEventListener('click', function () {
                openLightbox(img.getAttribute('data-full') || img.src, img.alt);
            });
        });

        closeBtn.addEventListener('click', closeLightbox);
        lightbox.addEventListener('click', (e) => {
            if (e.target === lightbox) closeLightbox();
        });
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && lightbox.classList.contains('show')) closeLightbox();
        });

        // --- PDF MODAL LOGIC ---
        function openPdfModal() {
            if (pdfModal) {
                pdfModal.style.display = 'flex';

                // ZDE JE POŽADOVANÁ ZMĚNA: Přednastavení checkboxů jako v Indexu
                const defaults = [
                    "Id", "Material", "Color", "Form", "Mfi", "Filler",
                    "MonthlyQuantity", "Notes", "Photo" // Photo is usually desired for single item
                ];

                const checkboxes = document.querySelectorAll('#pdf-column-list input[type="checkbox"]');
                checkboxes.forEach(cb => {
                    cb.checked = defaults.includes(cb.value);
                });
            }
        }

        function closePdfModal() {
            if (pdfModal) pdfModal.style.display = 'none';
        }

        if (openPdfBtnFab) openPdfBtnFab.addEventListener('click', openPdfModal);
        if (closePdfBtn) closePdfBtn.addEventListener('click', closePdfModal);

        if (pdfModal) {
            pdfModal.addEventListener('click', (e) => {
                if (e.target === pdfModal) closePdfModal();
            });
        }

        if (generatePdfBtn) {
            generatePdfBtn.addEventListener('click', function() {
                const checkedBoxes = document.querySelectorAll('#pdf-column-list input[type="checkbox"]:checked');
                const params = new URLSearchParams();

                checkedBoxes.forEach(cb => {
                    params.append('columnsToInclude', cb.value);
                });

                const baseUrl = '@Url.Action("ExportSinglePdf", "Photos", new { id = Model.Id })';
                const fullUrl = `${baseUrl}?${params.toString()}`;

                window.open(fullUrl, '_blank');
                closePdfModal();
            });
        }

        // Upload Logic
        const quickInput = document.getElementById('quickUploadInput');
        const quickPreview = document.getElementById('quickUploadPreview');
        const uploadBtn = document.getElementById('uploadBtn');
        const quickFileName = document.getElementById('quickUploadFileName');

        if (quickInput) {
            quickInput.addEventListener('change', function(e) {
                quickPreview.innerHTML = '';
                uploadBtn.disabled = true;

                if (quickFileName) {
                    quickFileName.textContent = '';
                    quickFileName.style.fontStyle = 'italic';
                }

                if (e.target.files.length > 0) {
                    uploadBtn.disabled = false;

                    if (quickFileName) {
                        quickFileName.textContent = e.target.files.length === 1 ? e.target.files[0].name : `${e.target.files.length} files selected`;
                        quickFileName.style.fontStyle = 'normal';
                    }

                    Array.from(e.target.files).forEach(file => {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = ev => {
                                const img = document.createElement('img');
                                img.src = ev.target.result;
                                quickPreview.appendChild(img);
                            };
                            reader.readAsDataURL(file);
                        }
                    });
                }
            });
        }
    })();
</script>