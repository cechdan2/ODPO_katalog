@model PhotoApp.Models.PhotoRecord

@{
    ViewData["Title"] = "Add new record";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="theme-color" content="#16a34a">
<link rel="manifest" href="/manifest.json">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<link rel="apple-touch-icon" href="/icons/icon-192.png">

<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 8px;
        --radius: 12px;
    }

    * {
        box-sizing: border-box;
    }

    html {
        width: 100%;
        /* overflow-x: hidden; <-- ODSTRANĚNO */
    }

    body {
        margin: 0;
        padding: 0 0 100px 0;
        width: 100%;
        /* overflow-x: hidden; <-- ODSTRANĚNO */
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    header {
        position: sticky;
        top: 0;
        z-index: 5;
        background: #fff;
        border-bottom: 1px solid var(--border);
        width: 100%;
    }

    .container {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px var(--pad);
        box-sizing: border-box;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px
    }

        .brand img {
            height: 36px;
            width: auto
        }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .center-form-container {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2rem 2.2rem;
        margin: 40px auto 0 auto;
        max-width: 720px;
        box-sizing: border-box;
        width: 100%;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

        .center-form-container h2 {
            margin-bottom: 1.8rem;
            text-align: center;
            font-size: 1.6rem;
            color: var(--brand-dark);
        }

    .styled-form {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr; /* Jeden sloupec pro mobily */
        gap: 12px 18px;
        align-items: start;
        box-sizing: border-box;
    }

    .full {
        grid-column: 1 / -1;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 0.5rem;
        width: 100%;
        box-sizing: border-box;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 0.4rem;
            color: #333;
        }

    .form-control {
        padding: 0.5rem 0.9rem;
        border: 1px solid #cfd8dc;
        border-radius: 7px;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            border-color: #0078d7;
        }

    /* Skryjeme starý input */
    .form-control-file {
        display: none;
    }

    /* === VLASTNÍ STYL PRO NAHRÁVÁNÍ SOUBORŮ === */
    .custom-file-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-top: 8px;
    }

    .input-file-hidden {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        overflow: hidden;
        position: absolute;
        z-index: -1;
    }

    .custom-file-label {
        background: var(--brand);
        color: #fff;
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .custom-file-label:hover {
            background: var(--brand-dark);
        }

    .custom-file-name {
        font-style: italic;
        color: #555;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
    /* === KONEC STYLU SOUBORŮ === */


    .btn-primary {
        background: var(--brand);
        color: #fff;
        padding: 0.7rem 1.6rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        margin-top: 0.2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

        .btn-primary:hover {
            background: var(--brand-dark);
        }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .preview-img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid var(--border);
        margin-top: 10px;
    }

    .validation-summary {
        color: #b91c1c;
        margin-bottom: 8px;
        grid-column: 1 / -1;
    }

    .field-validation {
        color: #b91c1c;
        font-size: 0.95rem;
        margin-top: 6px;
    }

    .additional-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 10px;
    }

        .additional-preview img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid var(--border);
        }

    /* === PLOVOUCÍ TLAČÍTKA (FAB) === */
    .fab-group {
        position: fixed;
        right: 20px;
        bottom: 20px;
        display: flex; /* Změněno z 'none' na 'flex' - viditelné na mobilu */
        flex-direction: column-reverse; /* Hlavní tlačítko (Uložit) bude dole */
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
        }
        
        .fab.upload {
             background: #0ea5e9; /* Modrá pro upload */
             color: white;
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* Desktopové zobrazení */
    @@media (min-width: 768px) {
        .fab-group {
            display: none; /* Skryjeme FAB na desktopu */
        }
        
        .styled-form {
            grid-template-columns: 1fr 1fr; /* Dvousloupcové na desktopu */
        }
        
        .desktop-actions {
             display: flex; /* Zobrazíme desktopová tlačítka */
        }
    }

    /* Mobilní zobrazení */
    @@media (max-width: 767px) {
         .desktop-actions {
            display: none; /* Skryjeme desktopová tlačítka na mobilu */
         }

        .center-form-container {
            padding: 1.2rem 1rem;
            margin: 20px 0 0 0;
            border: none;
            box-shadow: none;
        }

        .container {
             padding: 12px 10px;
        }

        .custom-file-name {
            max-width: 150px;
        }
    }
</style>

<header>
    <div class="container" style="display:flex;align-items:center;gap:12px">
        <div class="page-header" style="display:flex;align-items:center;gap:12px">
            <a href="@Url.Action("Index", "Photos")" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:18px;color:var(--brand);">Add New Record</h1>
                <div class="muted" style="font-size:13px;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="center-form-container">
        <h2>Add New Record</h2>

        <form id="createForm" asp-action="Create" method="post" enctype="multipart/form-data" class="styled-form" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="validation-summary"></div>

            <div class="form-group full">
                <label asp-for="OriginalName">Name</label>
                <input asp-for="OriginalName" class="form-control" />
                <span asp-validation-for="OriginalName" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position">Position</label>
                <input asp-for="Position" class="form-control" list="position-list" />
                @if (ViewBag.Positions != null)
                {
                    <datalist id="position-list">
                        @foreach (var item in ViewBag.Positions)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Position" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Material">Material</label>
                <input asp-for="Material" class="form-control" list="material-list" />
                @if (ViewBag.Materials != null)
                {
                    <datalist id="material-list">
                        @foreach (var item in ViewBag.Materials)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Material" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Form">Form</label>
                <input asp-for="Form" class="form-control" list="form-list" />
                @if (ViewBag.Forms != null)
                {
                    <datalist id="form-list">
                        @foreach (var item in ViewBag.Forms)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Form" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Filler">Filler</label>
                <input asp-for="Filler" class="form-control" list="filler-list" />
                @if (ViewBag.Fillers != null)
                {
                    <datalist id="filler-list">
                        @foreach (var item in ViewBag.Fillers)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Filler" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color">Color</label>
                <input asp-for="Color" class="form-control" list="color-list" />
                @if (ViewBag.Colors != null)
                {
                    <datalist id="color-list">
                        @foreach (var item in ViewBag.Colors)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Color" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="MonthlyQuantity">Monthly Quantity (t/month)</label>
                <input asp-for="MonthlyQuantity" class="form-control" list="monthlyquantity-list" />
                @if (ViewBag.MonthlyQuantities != null)
                {
                    <datalist id="monthlyquantity-list">
                        @foreach (var item in ViewBag.MonthlyQuantities)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="MonthlyQuantity" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mfi">MFI</label>
                <input asp-for="Mfi" class="form-control" list="mfi-list" />
                @if (ViewBag.Mfis != null)
                {
                    <datalist id="mfi-list">
                        @foreach (var item in ViewBag.Mfis)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Mfi" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier">Supplier</label>
                <input asp-for="Supplier" class="form-control" list="supplier-list" />
                @if (ViewBag.Suppliers != null)
                {
                    <datalist id="supplier-list">
                        @foreach (var item in ViewBag.Suppliers)
                        {
                            <option value="@item"></option>
                        }
                    </datalist>
                }
                <span asp-validation-for="Supplier" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label for="PhotoFile">Main photo</label>
                <div class="custom-file-wrapper">
                    <input type="file" name="PhotoFile" id="PhotoFile" class="input-file-hidden" accept="image/*" />
                    <label for="PhotoFile" class="custom-file-label">Select file...</label>
                    <span id="PhotoFile-name" class="custom-file-name">No file selected</span>
                </div>
                <span class="field-validation" id="photoError"></span>
            </div>

            <div class="form-group">
                <label for="PhotoPreview">View of main photo</label>
                <div>
                    <img id="PhotoPreview" src="" class="preview-img" alt="Náhled fotky" style="display:none;" />
                </div>
            </div>

            <div class="form-group full">
                <label for="AdditionalPhotoFiles">Additional photos (multiple)</label>
                <div class="custom-file-wrapper">
                    <input type="file" name="AdditionalPhotoFiles" id="AdditionalPhotoFiles" class="input-file-hidden" accept="image/*" multiple />
                    <label for="AdditionalPhotoFiles" class="custom-file-label">Select files...</label>
                    <span id="AdditionalPhotoFiles-name" class="custom-file-name">No files selected</span>
                </div>
                <span class="field-validation" id="additionalPhotosError"></span>
                <div id="AdditionalPreview" class="additional-preview"></div>
            </div>

            <div class="form-group full desktop-actions" style="gap:12px; justify-content:flex-end; margin-top: 18px;">
                <a href="@Url.Action("Index", "Photos")" class="btn">Abort</a>
                <button type="submit" class="btn-primary">Save record</button>
            </div>
        </form>
    </div>
</main>

<div class="fab-group">
    <a href="@Url.Action("Index", "Photos")" class="fab secondary" title="Back to catalog" aria-label="Back to catalog">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5"></path>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
    </a>

    <button type="button"
            class="fab upload"
            title="Vyfotit"
            aria-label="Vyfotit"
            onclick="document.getElementById('cameraInput').click();"
            style="
            width:60px;
            height:60px;
            border-radius:50%;
            background:#007bff;
            color:white;
            display:flex;
            align-items:center;
            justify-content:center;
            border:none;
            box-shadow:0 4px 10px rgba(0,0,0,0.3);
            cursor:pointer;
        ">

        <!-- Ikona malého fotoaparátu -->
        <svg xmlns="http://www.w3.org/2000/svg"
             width="26"
             height="26"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round">
            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z" />
            <circle cx="12" cy="13" r="4" />
        </svg>

    </button>

    <!-- Skrytý vstup → otevře fotoaparát -->
    <input id="cameraInput"
           type="file"
           accept="image/*"
           capture="environment"
           style="display:none;">

    
    <button type="submit" form="createForm" class="fab" title="Save record" aria-label="Save record">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
    </button>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
        
            // Hlavní fotka - náhled
            document.getElementById('PhotoFile')?.addEventListener('change', function (e) {
                const input = e.target;
                const preview = document.getElementById('PhotoPreview');
                const err = document.getElementById('photoError');
                err.textContent = '';
                if (input.files && input.files[0]) {
                    const file = input.files[0];
                    if (!file.type.startsWith('image/')) {
                        err.textContent = 'Prosím vyberte obrázek.';
                        preview.style.display = 'none';
                        preview.src = '';
                        return;
                    }
                    const reader = new FileReader();
                    reader.onload = function (ev) {
                        preview.src = ev.target.result;
                        preview.style.display = 'inline-block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.style.display = 'none';
                    preview.src = '';
                }
            });

            // Dodatečné fotky - náhled
            document.getElementById('AdditionalPhotoFiles')?.addEventListener('change', function (e) {
                const input = e.target;
                const previewContainer = document.getElementById('AdditionalPreview');
                const err = document.getElementById('additionalPhotosError');
                err.textContent = '';
                previewContainer.innerHTML = '';

                if (input.files && input.files.length > 0) {
                    Array.from(input.files).forEach((file, index) => {
                        if (!file.type.startsWith('image/')) {
                            err.textContent = `Soubor ${file.name} není obrázek.`;
                            return;
                        }

                        const reader = new FileReader();
                        reader.onload = function (ev) {
                            const img = document.createElement('img');
                            img.src = ev.target.result;
                            img.alt = `Náhled dodatečné fotky ${index + 1}`;
                            previewContainer.appendChild(img);
                        };
                        reader.readAsDataURL(file);
                    });
                }
            });

            // NOVÝ SKRIPT: Zobrazení názvů souborů
            function setupFileInput(inputId, spanId) {
                const input = document.getElementById(inputId);
                const span = document.getElementById(spanId);
                if (!input || !span) return;

                input.addEventListener('change', () => {
                    if (input.files && input.files.length > 0) {
                        span.textContent = input.files.length === 1 ? input.files[0].name : `${input.files.length} souborů vybráno`;
                        span.style.fontStyle = 'normal';
                        span.style.color = '#333';
                    } else {
                        span.textContent = input.multiple ? 'No files selected' : 'No file selected';
                        span.style.fontStyle = 'italic';
                        span.style.color = '#555';
                    }
                });
            }

            setupFileInput('PhotoFile', 'PhotoFile-name');
            setupFileInput('AdditionalPhotoFiles', 'AdditionalPhotoFiles-name');

        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}