@model PhotoApp.Models.PhotoRecord

@{
    ViewData["Title"] = "Přidat nový záznam";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#16a34a">
    <link rel="manifest" href="/manifest.json">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">
</head>

<style>
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 12px;
        --gap: 8px;
        --radius: 12px;
    }

    * {
        box-sizing: border-box;
    }

    html {
        width: 100%;
        overflow-x: hidden;
    }

    body {
        margin: 0;
        padding: 0 0 100px 0;
        width: 100%;
        overflow-x: hidden;
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
    }

    header {
        position: sticky;
        top: 0;
        z-index: 5;
        background: #fff;
        border-bottom: 1px solid var(--border);
        width: 100%;
    }

    .container {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px var(--pad);
        box-sizing: border-box;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px
    }

        .brand img {
            height: 36px;
            width: auto
        }

    h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
        color: var(--brand-dark);
    }

    .center-form-container {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 2rem 2.2rem;
        margin: 40px auto 0 auto;
        max-width: 720px;
        box-sizing: border-box;
        width: 100%;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

        .center-form-container h2 {
            margin-bottom: 1.8rem;
            text-align: center;
            font-size: 1.6rem;
            color: var(--brand-dark);
        }

    .styled-form {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr; /* Jeden sloupec pro přehlednost */
        gap: 12px 18px;
        align-items: start;
        box-sizing: border-box;
    }

    .full {
        grid-column: 1 / -1;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 0.5rem;
        width: 100%;
        box-sizing: border-box;
    }

        .form-group label {
            font-weight: 500;
            margin-bottom: 0.4rem;
            color: #333;
        }

    .form-control {
        padding: 0.5rem 0.9rem;
        border: 1px solid #cfd8dc;
        border-radius: 7px;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            border-color: #0078d7;
        }

    .form-control-file {
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    .btn-primary {
        background: var(--brand);
        color: #fff;
        padding: 0.7rem 1.6rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
        margin-top: 0.2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
    }

        .btn-primary:hover {
            background: var(--brand-dark);
        }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--white);
        color: var(--brand-dark);
        cursor: pointer;
        font-weight: 500;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn:hover {
            background: #e6f9e9;
        }

    .preview-img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid var(--border);
        margin-top: 10px;
    }

    .validation-summary {
        color: #b91c1c;
        margin-bottom: 8px;
        grid-column: 1 / -1;
    }

    .field-validation {
        color: #b91c1c;
        font-size: 0.95rem;
        margin-top: 6px;
    }

    .additional-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 10px;
    }

        .additional-preview img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid var(--border);
        }

    /* === PLOVOUCÍ TLAČÍTKA (FAB) === */
    .fab-group {
        position: fixed;
        right: 12px;
        bottom: 12px;
        display: flex;
        flex-direction: column-reverse; /* Obrácené pořadí pro správné zobrazení */
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* Na PC (šířka 768px a více) skryjeme FAB tlačítka */
    @@media (min-width: 768px) {
        .fab-group {
            display: none;
        }
        /* Vrátíme dvousloupcové rozložení pro formulář na desktopu */
        .styled-form {
            grid-template-columns: 1fr 1fr;
        }
    }

    @@media (max-width: 767px) {
        /* Tento blok je pro případné budoucí styly jen pro mobily,
               ale FAB jsou viditelné defaultně, takže zde není potřeba nic měnit. */
    }

    @@media (max-width: 640px) {
        .container {
            padding: 12px 10px;
        }

        .center-form-container {
            padding: 1.2rem 1rem;
            margin: 20px 8px 0 8px;
        }
    }
</style>

<header>
    <div class="container" style="display:flex;align-items:center;gap:12px">
        <div class="page-header" style="display:flex;align-items:center;gap:12px">
            <a href="@Url.Action("Index", "Photos")" style="display:inline-block;">
                <img src="@Url.Content("~/logo.png")" alt="ODPO logo" style="height:48px;width:auto;display:block;" />
            </a>
            <div>
                <h1 style="margin:0;font-size:18px;color:var(--brand);">Přidat nový záznam</h1>
                <div class="muted" style="font-size:13px;">ODPO s.r.o. – Katalog vzorků plastů</div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    <div class="center-form-container">
        <h2>Přidat nový záznam</h2>

        <form id="createForm" asp-action="Create" method="post" enctype="multipart/form-data" class="styled-form" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="validation-summary"></div>

            <div class="form-group full">
                <label asp-for="Name">Název</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position">Pozice</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExternalId">ID (externí)</label>
                <input asp-for="ExternalId" class="form-control" />
                <span asp-validation-for="ExternalId" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="OriginalName">Původní název</label>
                <input asp-for="OriginalName" class="form-control" />
                <span asp-validation-for="OriginalName" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Material">Materiál</label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Form">Forma</label>
                <input asp-for="Form" class="form-control" />
                <span asp-validation-for="Form" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Filler">Plnivo</label>
                <input asp-for="Filler" class="form-control" />
                <span asp-validation-for="Filler" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color">Barva</label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="MonthlyQuantity">Množství (měsíc/t)</label>
                <input asp-for="MonthlyQuantity" class="form-control" />
                <span asp-validation-for="MonthlyQuantity" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mfi">MFI</label>
                <input asp-for="Mfi" class="form-control" />
                <span asp-validation-for="Mfi" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier">Dodavatel</label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="Description">Popis</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="field-validation"></span>
            </div>

            <div class="form-group full">
                <label asp-for="Notes">Poznámky</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label for="PhotoFile">Hlavní fotka (soubor)</label>
                <input type="file" name="PhotoFile" id="PhotoFile" class="form-control-file" accept="image/*" />
                <span class="field-validation" id="photoError"></span>
            </div>

            <div class="form-group">
                <label for="PhotoPreview">Náhled hlavní fotky</label>
                <div>
                    <img id="PhotoPreview" src="" class="preview-img" alt="Náhled fotky" style="display:none;" />
                </div>
            </div>

            <div class="form-group full">
                <label for="AdditionalPhotoFiles">Dodatečné fotky (vyberte více najednou)</label>
                <input type="file" name="AdditionalPhotoFiles" id="AdditionalPhotoFiles" class="form-control-file" accept="image/*" multiple />
                <span class="field-validation" id="additionalPhotosError"></span>
                <div id="AdditionalPreview" class="additional-preview"></div>
            </div>

            <!-- Tlačítka Uložit a Zpět v desktopovém zobrazení -->
            <div class="form-group full" style="display:flex; gap:12px; justify-content:flex-end; margin-top: 18px;">
                <a href="@Url.Action("Index", "Photos")" class="btn">Zrušit</a>
                <button type="submit" class="btn-primary">Uložit záznam</button>
            </div>
        </form>
    </div>
</main>

<!-- FAB tlačítka -->
<div class="fab-group">
    <a href="@Url.Action("Index", "Photos")" class="fab" title="Zpět na katalog" aria-label="Zpět na katalog">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color:white;">
            <path d="M19 12H5"></path>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
    </a>
    <button type="button" class="fab secondary" title="Uložit záznam" aria-label="Uložit záznam" onclick="document.getElementById('createForm').submit();">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
            <polyline points="17 21 17 13 7 13 7 21"></polyline>
            <polyline points="7 3 7 8 15 8"></polyline>
        </svg>
    </button>
</div>

@section Scripts {
    <script>
        // Hlavní fotka - náhled
        document.getElementById('PhotoFile')?.addEventListener('change', function (e) {
            const input = e.target;
            const preview = document.getElementById('PhotoPreview');
            const err = document.getElementById('photoError');
            err.textContent = '';
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (!file.type.startsWith('image/')) {
                    err.textContent = 'Prosím vyberte obrázek.';
                    preview.style.display = 'none';
                    preview.src = '';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function (ev) {
                    preview.src = ev.target.result;
                    preview.style.display = 'inline-block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
                preview.src = '';
            }
        });

        // Dodatečné fotky - náhled
        document.getElementById('AdditionalPhotoFiles')?.addEventListener('change', function (e) {
            const input = e.target;
            const previewContainer = document.getElementById('AdditionalPreview');
            const err = document.getElementById('additionalPhotosError');
            err.textContent = '';
            previewContainer.innerHTML = '';

            if (input.files && input.files.length > 0) {
                Array.from(input.files).forEach((file, index) => {
                    if (!file.type.startsWith('image/')) {
                        err.textContent = `Soubor ${file.name} není obrázek.`;
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function (ev) {
                        const img = document.createElement('img');
                        img.src = ev.target.result;
                        img.alt = `Náhled dodatečné fotky ${index + 1}`;
                        previewContainer.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                });
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}