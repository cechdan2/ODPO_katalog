<script>
    document.addEventListener('DOMContentLoaded', function () {
        // --- FILTER PANEL LOGIC ---
        const filterPanel = document.getElementById('filterPanel');
        const openFilterFab = document.getElementById('openFilterFab');
        const closeFilterBtn = document.getElementById('closeFilterBtn');
        const resetFiltersBtn = document.getElementById('resetFiltersBtn');
        const mobileFilterForm = document.getElementById('mobileFilterForm');

        function openFilterPanel() {
            if (!filterPanel) return;
            filterPanel.classList.add('open');
            openFilterFab.setAttribute('aria-expanded', 'true');
        }

        function closeFilterPanel() {
            if (!filterPanel) return;
            filterPanel.classList.remove('open');
            openFilterFab.setAttribute('aria-expanded', 'false');
        }

        // ===== FILTER TOGGLE =====
        if (openFilterFab) {
            openFilterFab.addEventListener('click', function() {
                if (!filterPanel) return;
                if (filterPanel.classList.contains('open')) {
                    closeFilterPanel();
                } else {
                    openFilterPanel();
                }
            });
        }
        // =========================================================

        if (closeFilterBtn) {
            closeFilterBtn.addEventListener('click', closeFilterPanel);
        }

        // --- SELECT2 INITIALIZATION ---
        $(document).ready(function() {
            $('.multi-select').each(function() {
                // Get placeholder from data-attribute
                const placeholderText = $(this).data('placeholder') || 'Select...';
                $(this).select2({
                    placeholder: `Select ${placeholderText.toLowerCase()}...`,
                    allowClear: true,
                    width: '100%',
                    dropdownParent: $('#filterPanel') // Important for rendering in the panel
                });
            });
        });

        // --- RESET FILTERS ---
        if (resetFiltersBtn) {
            resetFiltersBtn.addEventListener('click', function () {
                // Reset text search
                const searchInput = mobileFilterForm.querySelector('input[type="search"]');
                if (searchInput) searchInput.value = '';

                // Reset all Select2 filters
                $('.multi-select').val(null).trigger('change');

                // Also reset checkboxes to "checked"
                document.querySelectorAll('.col-toggle').forEach(cb => {
                    cb.checked = true;
                });

                // Immediately submit the form to clear filters
                mobileFilterForm.submit();
            });
        }

        // === LOGIC: Show/Hide Columns ===
        const checkboxes = document.querySelectorAll(".col-toggle");

        function toggleField(colName, isVisible) {
            // Find all .info-item elements with the matching data-col
            document.querySelectorAll(`.item-card .info-item[data-col='${colName}']`).forEach(field => {
                // Use 'grid' (default display) or 'none'
                field.style.display = isVisible ? "grid" : "none";
            });
        }

        checkboxes.forEach(cb => {
            const colName = cb.dataset.col;
            // 1. Set initial state on page load
            toggleField(colName, cb.checked);

            // 2. Add listener for changes
            cb.addEventListener("change", function() {
                toggleField(colName, this.checked);
                // Note: This state isn't saved; checkboxes will revert to 'checked' on refresh
            });
        });
        // === END OF LOGIC ===


        // --- CLOSE PANEL ON CLICK OUTSIDE ---
        document.addEventListener('click', function(event) {
            if (!filterPanel || !filterPanel.classList.contains('open')) return;
            const isClickInsidePanel = filterPanel.contains(event.target);
            const isClickOnFab = openFilterFab.contains(event.target);
            // Close only if click is not on the panel, its Select2 dropdown, or the FAB
            if (!isClickInsidePanel && !isClickOnFab && !$(event.target).closest('.select2-container').length) {
                closeFilterPanel();
            }
        });


        // --- SERVICE WORKER (Unchanged) ---
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js', { scope: '/' })
                    .then(registration => console.log('Service Worker: Registered'))
                    .catch(error => console.error('Service Worker registration failed:', error));
            });
        }

        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
        });
    });
</script>