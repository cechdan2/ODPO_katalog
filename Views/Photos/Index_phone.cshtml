@using System.Linq
@model PhotoApp.ViewModels.PhotosIndexViewModel
@{
    ViewData["Title"] = "ODPO s.r.o. – Katalog vzorků plastů";
    string Safe(string s) => string.IsNullOrWhiteSpace(s) ? "-" : s;
    Func<PhotoApp.Models.PhotoRecord, string> ImageSrc = item =>
        !string.IsNullOrWhiteSpace(item.ImagePath) ? Url.Content(item.ImagePath) :
        !string.IsNullOrWhiteSpace(item.PhotoPath) ? Url.Content(item.PhotoPath) : null;

    // Struktura pro snadné generování filtrů v cyklu
    var filtersToRender = new[]
    {
        new { Name = "supplier",        Placeholder = "Dodavatel", AllValues = Model.Suppliers,         SelectedValues = Model.Supplier },
        new { Name = "material",        Placeholder = "Materiál",  AllValues = Model.Materials,         SelectedValues = Model.Material },
        new { Name = "color",           Placeholder = "Barva",     AllValues = Model.Colors,            SelectedValues = Model.Color },
        new { Name = "position",        Placeholder = "Pozice",    AllValues = Model.Positions,         SelectedValues = Model.Position },
        new { Name = "form",            Placeholder = "Forma",     AllValues = Model.Forms,             SelectedValues = Model.Form },
        new { Name = "filler",          Placeholder = "Plnivo",    AllValues = Model.Fillers,           SelectedValues = Model.Filler },
        new { Name = "monthlyQuantity", Placeholder = "Množství",  AllValues = Model.MonthlyQuantities, SelectedValues = Model.MonthlyQuantity },
        new { Name = "mfi",             Placeholder = "MFI",       AllValues = Model.Mfis,              SelectedValues = Model.Mfi }
    };
}

<!-- Head/meta tagy, knihovny pro filtry -->
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#16a34a">
    <link rel="manifest" href="/manifest.json">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">

    <!-- Knihovny pro pokročilé filtry -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        /* Styl pro Select2, aby ladil s designem */
        .select2-container .select2-selection--multiple {
            border-radius: 8px !important;
            border: 1px solid var(--border) !important;
            padding: 5px !important;
            min-height: 42px;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: var(--brand) !important;
            color: white !important;
            border: 1px solid var(--brand-dark) !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: white !important;
        }

        .select2-dropdown {
            border-radius: 8px !important;
            border: 1px solid var(--border) !important;
        }
    </style>
</head>


<style>
    /* === SJEDNOCENÉ GLOBÁLNÍ STYLY === */
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 16px;
        --gap: 12px;
        --radius: 16px;
        --bar-height: 0px;
    }

    * {
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        overflow-x: hidden;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
        padding-bottom: var(--bar-height);
    }

    .container {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: var(--pad);
    }

    /* === HLAVIČKA === */
    header {
        background: #fff;
        border-bottom: 2px solid var(--border);
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .header-inner {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px var(--pad);
        max-width: 1100px;
        margin: 0 auto;
    }

    .brand {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: inherit;
    }

        .brand img {
            height: 120px;
        }

        .brand h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
            color: var(--brand-dark);
            text-align: center;
        }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    /* === TLAČÍTKA A FORMULÁŘE === */
    .action-btn, .action-pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: var(--white);
        color: inherit;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

        .action-btn.primary, .action-pill.primary {
            background: var(--brand);
            color: #fff;
            border-color: var(--brand-dark);
        }

        .action-btn.destructive, .action-pill.destructive {
            background: #ef4444;
            color: #fff;
            border-color: #b91c1c;
        }

    .inline-form {
        margin: 0;
        display: inline-block;
    }

    /* === LIŠTA S FILTRY === */
    .filter-panel {
        position: fixed;
        left: 12px;
        /* Změna zde: Posunuto výše, aby se nepřekrývalo s FAB tlačítky */
        bottom: 215px;
        width: 360px;
        max-width: calc(100% - 24px);
        background: #fff;
        border-radius: 16px;
        border: 1px solid var(--border);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        z-index: 1600;
        transform: translateY(20px) scale(0.95);
        opacity: 0;
        visibility: hidden;
        transition: transform 0.2s ease-out, opacity 0.2s ease-out, visibility 0.2s;
        display: flex;
        flex-direction: column;
        max-height: 50vh; /* Snížení maximální výšky, aby se vešlo */
    }

        .filter-panel.open {
            transform: translateY(0) scale(1);
            opacity: 1;
            visibility: visible;
        }

    .filter-panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 16px;
        border-bottom: 1px solid var(--border);
    }

        .filter-panel-header h3 {
            margin: 0;
            font-size: 18px;
            color: var(--brand-dark);
        }

    .filter-panel-body {
        padding: 16px;
        overflow-y: auto;
    }

    #mobileFilterForm .filter-row {
        margin-bottom: 12px;
    }

        #mobileFilterForm .filter-row label {
            display: block;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 6px;
            color: #333;
        }

    #mobileFilterForm input[type="search"] {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid var(--border);
        font-size: 15px;
    }

    .filter-panel-footer {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
        padding: 12px 16px;
        border-top: 1px solid var(--border);
        background: #f9f9f9;
        border-bottom-left-radius: 16px;
        border-bottom-right-radius: 16px;
    }

    /* === KARTY POLOŽEK === */
    .card-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gap);
        padding-bottom: 16px;
    }

    .item-card {
        background: #fff;
        border-radius: 20px;
        padding: 16px;
        border: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        font-size: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,.05);
    }

    .thumb {
        width: 100%;
        max-width: 300px;
        aspect-ratio: 1;
        object-fit: cover;
        border-radius: 16px;
        border: 1.5px solid var(--border);
        background: #f7fef7;
        cursor: pointer;
    }

    .card-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 6px 16px;
        width: 100%;
        max-width: 400px;
    }

    .info-item {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 8px;
        align-items: baseline;
    }

        .info-item strong {
            font-weight: 600;
            color: #555;
        }

        .info-item span {
            font-weight: 500;
            color: #111;
        }

    .card-footer {
        display: flex;
        gap: 8px;
        justify-content: center;
        margin-top: auto;
        padding-top: 8px;
        width: 100%;
    }

        .card-footer .action-btn {
            flex-grow: 1;
            max-width: 180px;
        }

    /* === PLOVOUCÍ TLAČÍTKA (FAB) === */
    .fab-group {
        position: fixed;
        left: 20px;
        bottom: 12px;
        display: none;
        flex-direction: column;
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 300;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
            font-size: 20px;
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* === PATIČKA === */
    .footer {
        text-align: center;
        font-size: 16px;
        padding: 20px 0;
        color: #3b6b3b;
    }

    /* === RESPONZIVNÍ ZOBRAZENÍ === */
    @@media (min-width: 1200px) {
        .card-list {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 768px) {
        .fab-group, .filter-panel {
            display: none !important;
        }
    }

    @@media (max-width: 767px) {
        .fab-group {
            display: flex;
        }
    }

    @@media (max-width: 599px) {
        .brand img {
            height: 90px;
        }

        .brand h1 {
            font-size: 20px;
        }

        .header-inner {
            padding: 16px 0;
        }

        .container {
            padding: 12px 10px;
        }

        .item-card {
            padding: 14px;
            gap: 10px;
            border-radius: 16px;
        }

        .thumb {
            max-width: 280px;
        }

        .card-info {
            grid-template-columns: 1fr;
            max-width: 100%;
        }

        .info-item strong, .info-item span {
            font-size: 14px;
        }

        .card-footer {
            gap: 6px;
        }

            .card-footer .action-btn {
                padding: 9px 10px;
                font-size: 13px;
                max-width: none;
            }

        .footer {
            padding-bottom: 20px;
            font-size: 14px;
        }

        .filter-panel {
            right: 8px;
            left: 8px;
            width: auto;
            max-width: none;
        }
    }

    @@media (max-width: 420px) {
        .brand img {
            height: 80px;
        }

        .brand h1 {
            font-size: 18px;
        }

        .container {
            padding: 10px 8px;
        }

        .thumb {
            max-width: 240px;
        }

        .card-footer .action-btn {
            padding: 8px;
            font-size: 12px;
        }

        .info-item strong, .info-item span {
            font-size: 13px;
        }
    }
</style>

<header>
    <div class="header-inner">
        <a class="brand" asp-controller="Photos" asp-action="Index" title="Katalog vzorků">
            <img src="/logo.png" alt="ODPO logo" />
            <h1 class="visually-hidden">Katalog vzorků</h1>
        </a>
    </div>
</header>

<!-- Vylepšený filter panel -->
<aside id="filterPanel" class="filter-panel" role="dialog" aria-modal="true" aria-labelledby="filterPanelTitle" aria-hidden="true">
    <div class="filter-panel-header">
        <h3 id="filterPanelTitle">Filtry</h3>
        <button type="button" class="action-btn" id="closeFilterBtn" aria-label="Zavřít filtry">&times;</button>
    </div>
    <form method="get" id="mobileFilterForm" class="filter-panel-body">
        <div class="filter-row">
            <label for="search">Hledat ve všem</label>
            <input type="search" id="search" name="search" placeholder="Název, kód, poznámka..." value="@(Model?.Search ?? "")" />
        </div>

        @foreach (var filter in filtersToRender)
        {
            <div class="filter-row">
                <label for="@($"filter-{filter.Name}")">@filter.Placeholder</label>
                <select id="@($"filter-{filter.Name}")" name="@filter.Name" class="multi-select" multiple="multiple" style="width: 100%;">
                    @foreach (var val in filter.AllValues)
                    {
                        <option value="@val" selected="@(filter.SelectedValues.Contains(val))">@val</option>
                    }
                </select>
            </div>
        }
    </form>
    <div class="filter-panel-footer">
        <button type="button" class="action-btn" id="resetFiltersBtn">Smazat vše</button>
        <button type="submit" form="mobileFilterForm" class="action-btn primary">Použít filtry</button>
    </div>
</aside>

<main class="container" role="main">
    <div class="user-actions" style="display:flex; justify-content:flex-end; margin-bottom:8px; gap: 8px;">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <form asp-controller="Account" asp-action="Logout" method="post" class="inline-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="action-pill" title="Odhlásit se">Odhlásit</button>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="action-pill">Přihlásit</a>
        }
    </div>

    <div class="card-list" role="list">
        @foreach (var item in Model.Items)
        {
            var src = ImageSrc(item);
            <div class="item-card" role="listitem">
                @if (!string.IsNullOrEmpty(src))
                {
                    <a href="@Url.Action("Details", new { id = item.Id })" style="width:100%;display:flex;justify-content:center;" title="Zobrazit detail položky">
                        <img src="@src" alt="@item.Name" class="thumb" />
                    </a>
                }
                <div class="card-info">
                    <div class="info-item"><strong>Dodavatel:</strong><span>@Safe(item.Supplier)</span></div>
                    <div class="info-item"><strong>Forma:</strong><span>@Safe(item.Form)</span></div>
                    <div class="info-item"><strong>Materiál:</strong><span>@Safe(item.Material)</span></div>
                    <div class="info-item"><strong>Plnivo:</strong><span>@Safe(item.Filler)</span></div>
                    <div class="info-item"><strong>Barva:</strong><span>@Safe(item.Color)</span></div>
                    <div class="info-item"><strong>Množství:</strong><span>@Safe(item.MonthlyQuantity)</span></div>
                    <div class="info-item"><strong>Pozice:</strong><span>@Safe(item.Position)</span></div>
                    <div class="info-item"><strong>MFI:</strong><span>@Safe(item.Mfi)</span></div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn primary">Upravit</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="action-btn destructive"
                       onclick="return confirm('Opravdu chcete tento vzorek smazat?');">Smazat</a>
                </div>
            </div>
        }
    </div>

    <div class="footer">Data se ukládají v databázi. Pro zálohu exportujte data ze serveru.</div>
</main>

<div class="fab-group" aria-hidden="false">
    <a asp-controller="Photos" asp-action="Create" class="fab" title="Přidat nový vzorek" aria-label="Přidat nový vzorek">+</a>
    <a href="@Url.Action("Database", "Admin")" class="fab secondary" title="Správa dat" aria-label="Správa dat">
        <span style="line-height:1;">DB</span>
    </a>
    <button type="button" class="fab secondary" id="openFilterFab" title="Filtry" aria-label="Otevřít filtry" aria-haspopup="dialog" aria-expanded="false" aria-controls="filterPanel">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M3 5h18M6 12h12M10 19h4" stroke="#166534" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
    </button>
</div>

<!-- jQuery a Select2 pro filtry -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // --- LOGIKA FILTR PANELU ---
        const filterPanel = document.getElementById('filterPanel');
        const openFilterFab = document.getElementById('openFilterFab');
        const closeFilterBtn = document.getElementById('closeFilterBtn');
        const resetFiltersBtn = document.getElementById('resetFiltersBtn');
        const mobileFilterForm = document.getElementById('mobileFilterForm');

        function openFilterPanel() {
            if (!filterPanel) return;
            filterPanel.classList.add('open');
            openFilterFab.setAttribute('aria-expanded', 'true');
        }

        function closeFilterPanel() {
            if (!filterPanel) return;
            filterPanel.classList.remove('open');
            openFilterFab.setAttribute('aria-expanded', 'false');
        }

        if (openFilterFab) {
            openFilterFab.addEventListener('click', openFilterPanel);
        }
        if (closeFilterBtn) {
            closeFilterBtn.addEventListener('click', closeFilterPanel);
        }

        // --- INICIALIZACE SELECT2 ---
        $(document).ready(function() {
            $('.multi-select').each(function() {
                const placeholder = $(this).closest('.filter-row').find('label').text();
                $(this).select2({
                    placeholder: `Vybrat ${placeholder.toLowerCase()}...`,
                    allowClear: true,
                    width: '100%',
                    dropdownParent: $('#filterPanel') // Důležité pro správné zobrazení v panelu
                });
            });
        });

        // --- RESETOVÁNÍ FILTRŮ ---
        if (resetFiltersBtn) {
            resetFiltersBtn.addEventListener('click', function () {
                // Reset textového vyhledávání
                const searchInput = mobileFilterForm.querySelector('input[type="search"]');
                if (searchInput) searchInput.value = '';

                // Reset všech Select2 filtrů
                $('.multi-select').val(null).trigger('change');

                // Okamžité odeslání formuláře pro vyčištění filtrů
                mobileFilterForm.submit();
            });
        }

        // --- ZAVŘENÍ PANELU PŘI KLIKNUTÍ MIMO ---
        document.addEventListener('click', function(event) {
            if (!filterPanel || !filterPanel.classList.contains('open')) return;

            const isClickInsidePanel = filterPanel.contains(event.target);
            const isClickOnFab = openFilterFab.contains(event.target);
            // Zavřít pouze pokud se nekliká na panel, jeho Select2 dropdown, ani na otevírací tlačítko
            if (!isClickInsidePanel && !isClickOnFab && !$(event.target).closest('.select2-container').length) {
                closeFilterPanel();
            }
        });


        // --- SERVICE WORKER (Ponecháno) ---
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js', { scope: '/' })
                    .then(registration => console.log('Service Worker: Registered'))
                    .catch(error => console.error('Service Worker registration failed:', error));
            });
        }

        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
        });
    });
</script>