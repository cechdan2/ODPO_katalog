<script>
    document.addEventListener('DOMContentLoaded', function () {
        // --- FILTER MODAL LOGIC ---
        const filterOverlay = document.getElementById('filterOverlay');
        const openFilterFab = document.getElementById('openFilterFab');
        const closeFilterBtn = document.getElementById('closeFilterBtn');
        const resetFiltersBtn = document.getElementById('resetFiltersBtn');
        const mobileFilterForm = document.getElementById('mobileFilterForm');

        function openFilterPanel() {
            if (!filterOverlay) return;
            filterOverlay.classList.add('open');
            openFilterFab.setAttribute('aria-expanded', 'true');
        }

        function closeFilterPanel() {
            if (!filterOverlay) return;
            filterOverlay.classList.remove('open');
            openFilterFab.setAttribute('aria-expanded', 'false');
        }

        // ===== FILTER TOGGLE =====
        if (openFilterFab) {
            openFilterFab.addEventListener('click', function() {
                if (!filterOverlay) return;
                if (filterOverlay.classList.contains('open')) {
                    closeFilterPanel();
                } else {
                    openFilterPanel();
                }
            });
        }

        if (closeFilterBtn) {
            closeFilterBtn.addEventListener('click', closeFilterPanel);
        }

        // --- SELECT2 INITIALIZATION ---
        $(document).ready(function() {
            $('.multi-select').each(function() {
                const placeholderText = $(this).data('placeholder') || 'Select...';
                $(this).select2({
                    placeholder: `Select ${placeholderText.toLowerCase()}...`,
                    allowClear: true,
                    width: '100%',
                    dropdownParent: $('#filterOverlay .filter-modal-content')
                });
            });
        });

        // --- RESET FILTERS ---
        if (resetFiltersBtn) {
            resetFiltersBtn.addEventListener('click', function () {
                const searchInput = mobileFilterForm.querySelector('input[type="search"]');
                if (searchInput) searchInput.value = '';
                $('.multi-select').val(null).trigger('change');
                document.querySelectorAll('.col-toggle').forEach(cb => {
                    cb.checked = true;
                });
                mobileFilterForm.submit();
            });
        }

        // === LOGIC: Show/Hide Columns ===
        const checkboxes = document.querySelectorAll(".col-toggle");

        function toggleField(colName, isVisible) {
            document.querySelectorAll(`.item-card .info-item[data-col='${colName}']`).forEach(field => {
                field.style.display = isVisible ? "grid" : "none";
            });
        }

        checkboxes.forEach(cb => {
            const colName = cb.dataset.col;
            toggleField(colName, cb.checked);
            cb.addEventListener("change", function() {
                toggleField(colName, this.checked);
            });
        });

        // --- CLOSE PANEL ON CLICK OUTSIDE ---
        document.addEventListener('click', function(event) {
            if (!filterOverlay || !filterOverlay.classList.contains('open')) return;
            if (event.target === filterOverlay) {
                closeFilterPanel();
            }
        });


        // --- PDF EXPORT LOGIC (TRANSLATED) ---
        const modal = document.getElementById('pdf-export-modal');
        const fabPdfBtn = document.getElementById('fab-pdf-btn');
        const closeBtn = document.getElementById('pdf-modal-close');
        const cancelBtn = document.getElementById('pdf-export-cancel');
        const downloadBtn = document.getElementById('pdf-export-download');
        const columnListDiv = document.getElementById('pdf-column-list');

        const allColumns = {
            "Id": "ID",
            "Supplier": "Supplier",
            "Material": "Material (Internal Name)",
            "OriginalName": "Original Name",
            "Color": "Color",
            "Position": "Position",
            "Form": "Form",
            "Filler": "Filler",
            "Mfi": "MFI",
            "Notes": "Notes"
        };

        function openPdfModal() {
            columnListDiv.innerHTML = '';
            for (const [key, label] of Object.entries(allColumns)) {
                columnListDiv.innerHTML += `
                    <label style="display: flex; align-items: center; gap: 8px; font-size: 14px;">
                        <input type="checkbox" class="pdf-column-checkbox" value="${key}" checked>
                        ${label}
                    </label>
                `;
            }
            modal.style.display = 'flex';
        }

        function closePdfModal() {
            modal.style.display = 'none';
        }

        if (fabPdfBtn) fabPdfBtn.addEventListener('click', openPdfModal);
        if (closeBtn) closeBtn.addEventListener('click', closePdfModal);
        if (cancelBtn) cancelBtn.addEventListener('click', closePdfModal);
        if (modal) {
            modal.addEventListener('click', function(event) {
                if (event.target === modal) closePdfModal();
            });
        }

        if (downloadBtn) {
            downloadBtn.addEventListener('click', function() {
                const selectedColumns = [];
                document.querySelectorAll('.pdf-column-checkbox:checked').forEach(cb => {
                    selectedColumns.push(cb.value);
                });

                if (selectedColumns.length === 0) {
                    alert("You must select at least one column for export.");
                    return;
                }

                const mainForm = document.getElementById('mobileFilterForm');
                const formData = new FormData(mainForm);
                const params = new URLSearchParams(formData);

                selectedColumns.forEach(col => {
                    params.append('columnsToInclude', col);
                });

                const exportUrl = `@Url.Action("ExportPdf", "Photos")?${params.toString()}`;
                window.open(exportUrl, '_blank');
                closePdfModal();
            });
        }


        // --- SERVICE WORKER ---
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js', { scope: '/' })
                    .then(registration => console.log('Service Worker: Registered'))
                    .catch(error => console.error('Service Worker registration failed:', error));
            });
        }

        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
        });
    });
</script>