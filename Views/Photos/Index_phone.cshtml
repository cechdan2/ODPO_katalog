    <style>
        /* Style for Select2 to match the design */
        .select2-container .select2-selection--multiple {
            border-radius: 8px !important;
            border: 1px solid var(--border) !important;
            padding: 5px !important;
            min-height: 42px;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: var(--brand) !important;
            color: white !important;
            border: 1px solid var(--brand-dark) !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: white !important;
        }

        .select2-dropdown {
            border-radius: 8px !important;
            border: 1px solid var(--border) !important;
        }
    </style>
</head>


<style>
    /* === UNIFIED GLOBAL STYLES === */
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 16px;
        --gap: 12px;
        --radius: 16px;
        --bar-height: 0px;
    }

    * {
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        overflow-x: hidden;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
        padding-bottom: var(--bar-height);
    }

    .container {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: var(--pad);
    }

    /* === HEADER === */
    header {
        background: #fff;
        border-bottom: 2px solid var(--border);
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .header-inner {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px var(--pad);
        max-width: 1100px;
        margin: 0 auto;
    }

    .brand {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: inherit;
    }

        .brand img {
            height: 120px;
        }

        .brand h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
            color: var(--brand-dark);
            text-align: center;
        }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    /* === BUTTONS AND FORMS === */
    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: var(--white);
        color: inherit;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

        .action-btn.primary {
            background: var(--brand);
            color: #fff;
            border-color: var(--brand-dark);
        }

        .action-btn.destructive {
            background: #ef4444;
            color: #fff;
            border-color: #b91c1c;
        }

    /* New style for login/logout */
    .user-action-link {
        display: inline-block;
        padding: 10px 14px;
        color: var(--brand-dark);
        text-decoration: none;
        font-size: 16px;
        font-weight: 500;
        border-radius: 12px;
        background: transparent;
        border: none; /* Remove border */
        cursor: pointer;
        font-family: inherit; /* For <button> */
        line-height: 1; /* For <button> */
    }

        .user-action-link:hover {
            background: #eef7ee; /* Light green background on hover */
        }

    .inline-form {
        margin: 0;
        display: inline-block;
    }

    /* === FILTER PANEL === */
    .filter-panel {
        position: fixed;
        left: 12px;
        bottom: 215px;
        width: 360px;
        max-width: calc(100% - 24px);
        background: #fff;
        border-radius: 16px;
        border: 1px solid var(--border);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        z-index: 1600;
        transform: translateY(20px) scale(0.95);
        opacity: 0;
        visibility: hidden;
        transition: transform 0.2s ease-out, opacity 0.2s ease-out, visibility 0.2s;
        display: flex;
        flex-direction: column;
        max-height: 50vh;
    }

        .filter-panel.open {
            transform: translateY(0) scale(1);
            opacity: 1;
            visibility: visible;
        }

    .filter-panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 16px;
        border-bottom: 1px solid var(--border);
    }

        .filter-panel-header h3 {
            margin: 0;
            font-size: 18px;
            color: var(--brand-dark);
        }

    .filter-panel-body {
        padding: 16px;
        overflow-y: auto;
    }

    /* Checkbox for hiding columns */
    .filter-toggle {
        -webkit-appearance: none;
        appearance: none;
        position: relative;
        width: 20px;
        height: 20px;
        border: 2px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
        flex-shrink: 0;
        transition: background-color 0.2s, border-color 0.2s;
    }

        .filter-toggle:checked {
            background-color: var(--brand);
            border-color: var(--brand-dark);
        }

            .filter-toggle:checked::after {
                content: '✔';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 14px;
                color: white;
            }

    /* Filter Row */
    #mobileFilterForm .filter-row {
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        #mobileFilterForm .filter-row label {
            display: block;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 6px;
            color: #333;
        }

        #mobileFilterForm .filter-row .select2-container {
            flex-grow: 1;
            width: auto !important;
        }

    #mobileFilterForm input[type="search"] {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid var(--border);
        font-size: 15px;
    }

    .filter-panel-footer {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
        padding: 12px 16px;
        border-top: 1px solid var(--border);
        background: #f9f9f9;
        border-bottom-left-radius: 16px;
        border-bottom-right-radius: 16px;
    }

    /* === ITEM CARDS (HYBRID LAYOUT) === */

    .card-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gap);
        padding-bottom: 16px;
    }

    .item-card {
        background: #fff;
        border-radius: 20px;
        padding: 16px;
        border: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px; /* Gap for heading */
        font-size: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,.05);
    }

        /* Style for card heading */
        .item-card .name {
            font-size: 20px;
            font-weight: 700;
            color: var(--brand-dark);
            margin: 0;
            width: 100%;
            text-align: center;
            border-bottom: 2px solid var(--brand);
            padding-bottom: 8px;
        }

    .thumb {
        width: 100%;
        max-width: 300px;
        aspect-ratio: 1;
        object-fit: cover;
        border-radius: 16px;
        border: 1.5px solid var(--border);
        background: #f7fef7;
        cursor: pointer;
    }

    /* .card-info is a 2-column grid */
    .card-info {
        display: grid;
        grid-template-columns: 1fr 1fr; /* 2 columns */
        gap: 8px; /* Gap between cells */
        width: 100%;
    }

    /* Each .info-item is a separate "cell" */
    .info-item {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 8px;
        align-items: baseline;
        /* Cell style */
        background: #fcfcfc;
        border: 1px solid var(--border);
        padding: 8px 10px;
        border-radius: 8px;
    }

        .info-item strong {
            font-weight: 600;
            color: #555;
            text-align: right; /* Right-align */
        }

        .info-item span {
            font-weight: 500;
            color: #111;
        }


    .card-footer {
        display: flex;
        gap: 8px;
        justify-content: center;
        margin-top: auto;
        padding-top: 8px;
        width: 100%;
    }

        .card-footer .action-btn {
            flex-grow: 1;
        }

    /* === FLOATING ACTION BUTTONS (FAB) === */
    .fab-group {
        position: fixed;
        right: 20px;
        bottom: 20px;
        display: none;
        flex-direction: column;
        gap: 10px;
        z-index: 1700;
    }

    .fab {
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 14px rgba(0,0,0,0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 300;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease;
    }

        .fab.secondary {
            background: #ffffff;
            color: var(--brand-dark);
            border: 1px solid var(--border);
            font-size: 20px;
        }

        .fab:hover {
            transform: translateY(-2px);
        }

    /* === FOOTER === */
    .footer {
        text-align: center;
        font-size: 16px;
        padding: 20px 0;
        color: #3b6b3b;
    }

    /* === RESPONSIVE STYLES === */
    @@media (min-width: 1200px) {
        .card-list {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 768px) {
        .fab-group, .filter-panel {
            display: none !important;
        }
    }

    @@media (max-width: 767px) {
        .fab-group {
            display: flex;
        }
    }

    @@media (max-width: 599px) {
        .brand img {
            height: 90px;
        }

        .brand h1 {
            font-size: 20px;
        }

        .header-inner {
            padding: 16px 0;
        }

        .container {
            padding: 12px 10px;
        }

        .item-card {
            padding: 14px;
            gap: 10px;
            border-radius: 16px;
        }

        .thumb {
            max-width: 280px;
        }

        .card-info {
            max-width: 100%;
        }

        .info-item strong, .info-item span {
            font-size: 14px;
        }

        .card-footer {
            gap: 6px;
        }

            .card-footer .action-btn {
                padding: 9px 10px;
                font-size: 13px;
                max-width: none;
            }

        .footer {
            padding-bottom: 20px;
            font-size: 14px;
        }

        .filter-panel {
            right: 8px;
            left: 8px;
            width: auto;
            max-width: none;
        }
    }

    @@media (max-width: 420px) {
        .brand img {
            height: 80px;
        }

        .brand h1 {
            font-size: 18px;
        }

        .container {
            padding: 10px 8px;
        }

        .thumb {
            max-width: 240px;
        }

        .card-footer .action-btn {
            padding: 8px;
            font-size: 12px;
        }
        /* Stack label and value on extra-small screens */
        .info-item {
            grid-template-columns: 1fr;
            gap: 2px;
            padding: 6px 8px;
        }

            .info-item strong {
                text-align: left; /* Revert to left-align when stacked */
                font-size: 11px;
                color: #777;
            }

            .info-item span {
                font-size: 13px;
            }
    }
</style>

<header>
    <div class="header-inner">
        <a class="brand" asp-controller="Photos" asp-action="Index" title="Sample Catalog">
            <img src="/logo.png" alt="ODPO logo" />
            <h1 class="visually-hidden">Sample Catalog</h1>
        </a>
    </div>
</header>

<aside id="filterPanel" class="filter-panel" role="dialog" aria-modal="true" aria-labelledby="filterPanelTitle" aria-hidden="true">
    <div class="filter-panel-header">
        <h3 id="filterPanelTitle">Filters</h3>
        <button type="button" class="action-btn" id="closeFilterBtn" aria-label="Close filters">&times;</button>
    </div>
    <form method="get" id="mobileFilterForm" class="filter-panel-body">
        <div class="filter-row">
            <label for="search">Search All</label>
            <input type="search" id="search" name="search" placeholder="Name, code, notes..." value="@(Model?.Search ?? "")" />
        </div>

        @foreach (var filter in filtersToRender)
        {
            <div class="filter-row">
                <input type="checkbox" class="filter-toggle col-toggle"
                       data-col="@filter.Name.ToLower()" title="Show/hide column" checked />

                <select id="@($"filter-{filter.Name}")" name="@filter.Name" class="multi-select" multiple="multiple"
                        data-placeholder="@filter.Placeholder">
                    @foreach (var val in filter.AllValues)
                    {
                        <option value="@val" selected="@(filter.SelectedValues.Contains(val))">@val</option>
                    }
                </select>
            </div>
        }
    </form>
    <div class="filter-panel-footer">
        <button type="button" class="action-btn" id="resetFiltersBtn">Reset All</button>
        <button type="submit" form="mobileFilterForm" class="action-btn primary">Apply Filters</button>
    </div>
</aside>

<main class="container" role="main">
    <div class="user-actions" style="display:flex; justify-content:flex-end; margin-bottom:8px; gap: 8px;">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <form asp-controller="Account" asp-action="Logout" method="post" class="inline-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="user-action-link" title="Log out">Log out</button>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="user-action-link">Log in</a>
        }
    </div>

    <div class="card-list" role="list">
        @foreach (var item in Model.Items)
        {
            var src = ImageSrc(item);
            <div class="item-card" role="listitem">

                <h3 class="name">@Safe(item.OriginalName)</h3>

                @if (!string.IsNullOrEmpty(src))
                {
                    <a href="@Url.Action("Details", new { id = item.Id })" style="width:100%;display:flex;justify-content:center;" title="View item details">
                        <img src="@src" alt="@item.Name" class="thumb" />
                    </a>
                }

                <div class="card-info">
                    <div class="info-item" data-col="supplier"><strong>Supplier:</strong><span>@Safe(item.Supplier)</span></div>
                    <div class="info-item" data-col="material"><strong>Material:</strong><span>@Safe(item.Material)</span></div>
                    <div class="info-item" data-col="color"><strong>Color:</strong><span>@Safe(item.Color)</span></div>
                    <div class="info-item" data-col="position"><strong>Position:</strong><span>@Safe(item.Position)</span></div>
                    <div class="info-item" data-col="form"><strong>Form:</strong><span>@Safe(item.Form)</span></div>
                    <div class="info-item" data-col="filler"><strong>Filler:</strong><span>@Safe(item.Filler)</span></div>
                    <div class="info-item" data-col="monthlyquantity"><strong>Quantity:</strong><span>@Safe(item.MonthlyQuantity)</span></div>
                    <div class="info-item" data-col="mfi"><strong>MFI:</strong><span>@Safe(item.Mfi)</span></div>
                </div>

                <div class="card-footer">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn primary">Edit</a>
                </div>
            </div>
        }
    </div>

    <div class="footer">Data is saved in the database. For backup, export the data from the server.</div>
</main>

