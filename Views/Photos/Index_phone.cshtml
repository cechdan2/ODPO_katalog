@using System.Linq
@model PhotoApp.ViewModels.PhotosIndexViewModel
@{
    ViewData["Title"] = "ODPO s.r.o. – Katalog vzorků plastů";
    string Safe(string s) => string.IsNullOrWhiteSpace(s) ? "-" : s;
    Func<PhotoApp.Models.PhotoRecord, string> ImageSrc = item =>
        !string.IsNullOrWhiteSpace(item.ImagePath) ? Url.Content(item.ImagePath) :
        !string.IsNullOrWhiteSpace(item.PhotoPath) ? Url.Content(item.PhotoPath) : null;
}

<!-- Head/meta tagy pro PWA a mobilní zařízení -->
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#16a34a">
    <link rel="manifest" href="/manifest.json">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="apple-touch-icon" href="/icons/icon-192.png">
</head>

<style>
    /* === SJEDNOCENÉ GLOBÁLNÍ STYLY === */
    :root {
        --brand: #16a34a;
        --brand-dark: #166534;
        --border: #dbe7d9;
        --bg: #f4fbf4;
        --text: #0b1f0b;
        --white: #fff;
        --pad: 16px;
        --gap: 12px;
        --radius: 16px;
        /* Jednotná výška spodní lišty pro mobilní zobrazení */
        --bar-height: 96px;
    }

    * {
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        overflow-x: hidden;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu;
        color: var(--text);
        background: var(--bg);
        /* Odsazení stránky odpovídá výšce spodní lišty */
        padding-bottom: var(--bar-height);
    }

    .container {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: var(--pad);
    }

    /* === HLAVIČKA === */
    header {
        background: #fff;
        border-bottom: 2px solid var(--border);
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .header-inner {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px var(--pad);
        max-width: 1100px;
        margin: 0 auto;
    }

    .brand {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: inherit;
    }

        .brand img {
            height: 120px;
        }

        .brand h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
            color: var(--brand-dark);
            text-align: center;
        }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    /* === TLAČÍTKA A FORMULÁŘE === */
    .action-btn, .action-pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: var(--white);
        color: inherit;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

        .action-btn.primary, .action-pill.primary {
            background: var(--brand);
            color: #fff;
            border-color: var(--brand-dark);
        }

        .action-btn.destructive, .action-pill.destructive {
            background: #ef4444;
            color: #fff;
            border-color: #b91c1c;
        }

    .inline-form {
        margin: 0;
        display: inline-block;
    }

    /* === LIŠTA S FILTRY === */
    .toolbar {
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: var(--pad);
        margin-bottom: var(--pad);
    }

    .filter-form {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--gap);
        align-items: stretch;
    }

        .filter-form input, .filter-form select {
            width: 100%;
            padding: 14px;
            border-radius: 10px;
            border: 1px solid var(--border);
            font-size: 18px;
            background: #fff;
        }

            .filter-form input[type="search"] {
                grid-column: 1 / -1;
            }

    .filter-controls {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        grid-column: 1 / -1;
        margin-top: 4px;
    }

        .filter-controls .action-btn {
            width: 100%;
            padding: 12px;
            font-size: 18px;
        }

    /* === KARTY POLOŽEK === */
    .card-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gap);
        padding-bottom: 16px;
    }

    .item-card {
        background: #fff;
        border-radius: 20px;
        padding: 16px;
        border: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        font-size: 16px;
        box-shadow: 0 2px 8px rgba(0,0,0,.05);
    }

    .thumb {
        width: 100%;
        max-width: 300px;
        aspect-ratio: 1;
        object-fit: cover;
        border-radius: 16px;
        border: 1.5px solid var(--border);
        background: #f7fef7;
    }

    .card-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
        text-align: center;
    }

        .card-info div {
            line-height: 1.4;
            font-size: 15px;
        }

        .card-info strong {
            font-weight: 600;
            color: #333;
        }

    .card-footer {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 12px;
        width: 100%;
    }

        .card-footer .action-btn {
            flex: 1;
            min-width: 90px;
            padding: 10px 12px;
            font-size: 14px;
        }

    /* === SPODNÍ LIŠTA === */
    .bottom-bar {
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        height: var(--bar-height); /* Používá jednotnou výšku */
        background: linear-gradient(180deg, var(--brand), #166534);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1500;
        padding: 10px;
        gap: 12px;
        box-shadow: 0 -6px 20px rgba(0,0,0,0.12);
    }

        .bottom-bar .actions-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            width: 100%;
            max-width: 600px;
            padding: 6px;
        }

        .bottom-bar .action-btn {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 5px;
            padding: 8px;
            border-radius: 12px;
            text-decoration: none;
            color: #fff;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.08);
            min-height: 60px;
        }

            .bottom-bar .action-btn img {
                width: 29px;
                height: 29px;
                filter: drop-shadow(0 2px 2px rgba(0,0,0,0.25));
            }

            .bottom-bar .action-btn .label {
                font-size: 8.5px;
                font-weight: 600;
                color: #fff;
                text-align: center;
            }

            .bottom-bar .action-btn.action-btn-destructive {
                background: rgba(239, 68, 68, 0.7); /* Červená s průhledností */
                border-color: rgba(255,255,255,0.1);
            }

    /* === PLOVOUCÍ TLAČÍTKO '+' === */
    .fab {
        display: none; /* Na desktopu skryté */
        position: fixed;
        z-index: 1000;
        left: 20px;
        /* Dynamická pozice nad spodní lištou */
        bottom: calc(var(--bar-height) + 14px);
        width: 56px;
        height: 56px;
        background-color: var(--brand);
        color: var(--white);
        border-radius: 50%;
        box-shadow: 0 6px 10px rgba(0,0,0,0.2);
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 300;
        text-decoration: none;
        transition: background-color 0.2s, transform 0.2s;
    }

        .fab:hover {
            background-color: var(--brand-dark);
            transform: scale(1.05);
        }

    /* === PATIČKA === */
    .footer {
        text-align: center;
        font-size: 16px;
        padding: 20px 0;
        color: #3b6b3b;
    }

    /* === RESPONZIVNÍ ZOBRAZENÍ === */

    /* Desktop - 1200px a více */
    @@media (min-width: 1200px) {
        .card-list {
            grid-template-columns: repeat(2, 1fr);
        }

        .filter-form {
            grid-template-columns: repeat(3, 1fr);
        }

            .filter-form input[type="search"] {
                grid-column: 1 / -1;
            }
    }

    /* Větší Tablety - skrýváme spodní lištu a FAB */
    @@media (min-width: 768px) {
        body {
            padding-bottom: 0;
        }

        .bottom-bar {
            display: none;
        }

        .fab {
            display: none;
        }
    }

    /* Menší Tablety */
    @@media (max-width: 767px) {
        .fab {
            display: flex;
        }
        /* Zobrazí se FAB */
    }

    /* Mobily */
    @@media (max-width: 599px) {
        .brand img {
            height: 90px;
        }

        .brand h1 {
            font-size: 20px;
        }

        .header-inner {
            padding: 16px 0;
        }

        .container {
            padding: 12px 10px;
        }

        .toolbar {
            padding: 12px;
            margin-bottom: 10px;
        }

        .filter-form {
            gap: 8px;
        }

            .filter-form input, .filter-form select {
                padding: 12px;
                font-size: 16px;
            }

        .item-card {
            padding: 14px;
            gap: 10px;
            border-radius: 16px;
        }

        .thumb {
            max-width: 280px;
        }

        .card-info div {
            font-size: 14px;
        }

        .card-footer {
            gap: 6px;
        }

            .card-footer .action-btn {
                padding: 9px 10px;
                font-size: 13px;
                min-width: 75px;
            }

        .footer {
            padding-bottom: 20px;
            font-size: 14px;
        }
    }

    /* Extra malé mobily */
    @@media (max-width: 420px) {
        .brand img {
            height: 80px;
        }

        .brand h1 {
            font-size: 18px;
        }

        .container {
            padding: 10px 8px;
        }

        .toolbar {
            padding: 10px;
        }

        .thumb {
            max-width: 240px;
        }

        .card-footer .action-btn {
            padding: 8px;
            font-size: 12px;
            min-width: 65px;
        }

        .card-info div {
            font-size: 13px;
        }

        .bottom-bar .actions-grid {
            gap: 6px;
        }

        .bottom-bar .action-btn {
            min-height: 51px;
            gap: 4px;
            padding: 5px;
        }

            .bottom-bar .action-btn img {
                width: 22px;
                height: 22px;
            }

            .bottom-bar .action-btn .label {
                font-size: 8px;
            }
    }
</style>

